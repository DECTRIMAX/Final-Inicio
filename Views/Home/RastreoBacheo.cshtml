        .unit-status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
        }

        .notification {
            position: fixed;
            top: 25px;
            right: 25px;
            padding: 1rem 1.5rem;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
            z-index: 10000;
            font-size: 0.9rem;
            max-width: 300px;
            opacity: 0;
            transform: translateX(100%);
            transition: all 0.3s ease;
            font-weight: 600;
            cursor: pointer;
        }

            .notification.show {
                opacity: 1;
                transform: translateX(0);
            }

            .notification.success {
                background: var(--success);
                color: white;
            }

            .notification.info {
                background: var(--primary);
                color: white;
            }

            .notification.warning {
                background: var(--warning);
                color: white;
            }
    </style>
</head>

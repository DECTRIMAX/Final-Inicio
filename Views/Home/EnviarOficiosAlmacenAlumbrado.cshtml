    <script>
        let navPanelOpen = false;

        document.getElementById('fecha').value = new Date().toISOString().split('T')[0];

        function toggleNavPanel() {
            const navPanel = document.getElementById('navPanel');
            const overlay = document.getElementById('navPanelOverlay');
            const toggleBtn = document.getElementById('navToggle');

            navPanelOpen = !navPanelOpen;

            if (navPanelOpen) {
                navPanel.classList.add('open');
                overlay.classList.add('active');
                toggleBtn.classList.add('active');
                toggleBtn.innerHTML = '<i class="fas fa-times"></i>';
                document.body.style.overflow = 'hidden';
            } else {
                navPanel.classList.remove('open');
                overlay.classList.remove('active');
                toggleBtn.classList.remove('active');
                toggleBtn.innerHTML = '<i class="fas fa-th-large"></i>';
                document.body.style.overflow = '';
            }
        }

        function redirectTo(module) {
            if (navPanelOpen) toggleNavPanel();

            const urls = {
                'captura': '/Home/CapturaAlumbrado',
                'programacion': '/Home/ProgramacionAlumbrado',
                'mapa': '/Home/MapaAlumbrado',
                'rastreo': '/Home/RastreoAlumbrado',
                'dashboard': '/Home/DashboardAlumbrado',
                'reportes': '/Home/ReportesAlumbrado',
                'inventario': '/Home/MaterialUtilizadoAlumbrado',
                'asistencia': '/Home/AsistenciaPersonalAlumbrado',
                'placas': '/Home/RepositorioPlacasAlumbrado'
            };

            if (urls[module]) {
                window.location.href = urls[module];
            }
        }

        function openNuevoOficio() {
            document.getElementById('oficioModal').classList.add('active');
            document.getElementById('modalTitle').textContent = 'Nueva Solicitud de Material';

            document.getElementById('destinatario').value = 'Administrador de Almacén';
            document.getElementById('cargo').value = 'Jefe de Almacén';
            document.getElementById('fecha').value = new Date().toISOString().split('T')[0];
            document.getElementById('oficioNo').value = '';
            document.getElementById('contenido').value = '';

            clearUnidadFields();
            document.getElementById('unidadSection').style.display = 'none';
            document.getElementById('btnToggleUnidad').innerHTML = '<i class="fas fa-plus"></i> Agregar Info de Unidad';

            const tbody = document.getElementById('materialTableBody');
            tbody.innerHTML = `
                <tr>
                    <td><input type="number" value="1" min="1"></td>
                    <td><input type="text" placeholder="PZA" value="PZA"></td>
                    <td><input type="text" placeholder="Descripción del material"></td>
                    <td><input type="text" placeholder="Modelo o número de parte"></td>
                    <td><button class="btn-delete-row" onclick="deleteRow(this)"><i class="fas fa-trash"></i></button></td>
                </tr>
            `;

            removeFile('pdf');
            removeFile('foto');
        }

        function openDetalleOficio(oficioId) {
            document.getElementById('oficioModal').classList.add('active');
            document.getElementById('modalTitle').textContent = 'Detalle del Oficio';

            if (oficioId === 'of1') {
                document.getElementById('destinatario').value = 'Administrador de Almacén';
                document.getElementById('cargo').value = 'Jefe de Almacén';
                document.getElementById('fecha').value = '2025-10-10';
                document.getElementById('oficioNo').value = 'ALUMBRADO/1445/10/2025';
                document.getElementById('contenido').value = 'Por medio de la presente solicito su apoyo con la adquisición de materiales necesarios para el mantenimiento de alumbrado público en Colonia Centro.';

                document.getElementById('unidadSection').style.display = 'block';
                document.getElementById('btnToggleUnidad').innerHTML = '<i class="fas fa-minus"></i> Ocultar Info de Unidad';
                document.getElementById('numEconomico').value = 'AP-03';
                document.getElementById('unidad').value = 'Camioneta con Canasta';
                document.getElementById('tipo').value = 'CANASTA';
                document.getElementById('marca').value = 'FORD F-350';
                document.getElementById('modelo').value = '2019';
                document.getElementById('placa').value = 'AP3456X';
                document.getElementById('serie').value = '1FTRF3B69KEA12345';

                const tbody = document.getElementById('materialTableBody');
                tbody.innerHTML = `
                    <tr>
                        <td><input type="number" value="15" min="1"></td>
                        <td><input type="text" value="PZA"></td>
                        <td><input type="text" value="LUMINARIA LED 150W"></td>
                        <td><input type="text" value="PHILIPS BRP372"></td>
                        <td><button class="btn-delete-row" onclick="deleteRow(this)"><i class="fas fa-trash"></i></button></td>
                    </tr>
                    <tr>
                        <td><input type="number" value="15" min="1"></td>
                        <td><input type="text" value="PZA"></td>
                        <td><input type="text" value="BALASTRO 150W"></td>
                        <td><input type="text" value="LEDVANCE HF-P 150"></td>
                        <td><button class="btn-delete-row" onclick="deleteRow(this)"><i class="fas fa-trash"></i></button></td>
                    </tr>
                `;
            } else if (oficioId === 'of2') {
                document.getElementById('destinatario').value = 'Administrador de Almacén';
                document.getElementById('cargo').value = 'Jefe de Almacén';
                document.getElementById('fecha').value = '2025-09-28';
                document.getElementById('oficioNo').value = 'ALUMBRADO/1421/09/2025';
                document.getElementById('contenido').value = 'Solicito materiales para mantenimiento de red de alumbrado público en Av. Principal.';

                document.getElementById('unidadSection').style.display = 'block';
                document.getElementById('btnToggleUnidad').innerHTML = '<i class="fas fa-minus"></i> Ocultar Info de Unidad';
                document.getElementById('numEconomico').value = 'AP-01';
                document.getElementById('unidad').value = 'Camioneta Cuadrilla';
                document.getElementById('tipo').value = 'CUADRILLA';
                document.getElementById('marca').value = 'CHEVROLET SILVERADO';
                document.getElementById('modelo').value = '2020';
                document.getElementById('placa').value = 'XY9988Z';
                document.getElementById('serie').value = '3GCPYDED5LG123456';

                const tbody = document.getElementById('materialTableBody');
                tbody.innerHTML = `
                    <tr>
                        <td><input type="number" value="200" min="1"></td>
                        <td><input type="text" value="MTS"></td>
                        <td><input type="text" value="CABLE CALIBRE 2/0 AWG"></td>
                        <td><input type="text" value="KOBREX"></td>
                        <td><button class="btn-delete-row" onclick="deleteRow(this)"><i class="fas fa-trash"></i></button></td>
                    </tr>
                    <tr>

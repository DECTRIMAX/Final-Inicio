                        <td><input type="number" value="50" min="1"></td>
                        <td><input type="text" value="MTS"></td>
                        <td><input type="text" value="TUBO CONDUIT 1""></td>
                        <td><input type="text" value="PARED GRUESA"></td>
                        <td><button class="btn-delete-row" onclick="deleteRow(this)"><i class="fas fa-trash"></i></button></td>
                    </tr>
                `;
            }

            const modalFooter = document.querySelector('.modal-footer');
            modalFooter.innerHTML = `
                <button class="btn-cancel" onclick="closeModal()">Cerrar</button>
            `;
        }

        function closeModal() {
            document.getElementById('oficioModal').classList.remove('active');

            const modalFooter = document.querySelector('.modal-footer');
            modalFooter.innerHTML = `
                <button class="btn-cancel" onclick="closeModal()">Cancelar</button>
                <button class="btn-submit" onclick="enviarOficio()">
                    <i class="fas fa-paper-plane"></i> Enviar Oficio a Almacén
                </button>
            `;
        }

        function toggleUnidadSection() {
            const section = document.getElementById('unidadSection');
            const btn = document.getElementById('btnToggleUnidad');

            if (section.style.display === 'none') {
                section.style.display = 'block';
                btn.innerHTML = '<i class="fas fa-minus"></i> Ocultar Info de Unidad';
            } else {
                section.style.display = 'none';
                btn.innerHTML = '<i class="fas fa-plus"></i> Agregar Info de Unidad';
                clearUnidadFields();
            }
        }

        function clearUnidadFields() {
            document.getElementById('numEconomico').value = '';
            document.getElementById('unidad').value = '';
            document.getElementById('tipo').value = '';
            document.getElementById('marca').value = '';
            document.getElementById('modelo').value = '';
            document.getElementById('placa').value = '';
            document.getElementById('serie').value = '';
        }

        function addMaterialRow() {
            const tbody = document.getElementById('materialTableBody');
            const newRow = tbody.insertRow();
            newRow.innerHTML = `
                <td><input type="number" value="1" min="1"></td>
                <td><input type="text" placeholder="PZA" value="PZA"></td>
                <td><input type="text" placeholder="Descripción del material"></td>
                <td><input type="text" placeholder="Modelo o número de parte"></td>
                <td><button class="btn-delete-row" onclick="deleteRow(this)"><i class="fas fa-trash"></i></button></td>
            `;
        }

        function deleteRow(btn) {
            const row = btn.closest('tr');
            if (document.getElementById('materialTableBody').rows.length > 1) {
                row.remove();
            } else {
                alert('Debe haber al menos un material en la tabla');
            }
        }

        function handleFileUpload(type, input) {
            const file = input.files[0];
            if (!file) return;

            const uploadDiv = document.getElementById(type + 'Upload');
            const previewDiv = document.getElementById(type + 'Preview');

            uploadDiv.classList.add('has-file');

            const fileName = file.name;
            const fileSize = (file.size / 1024 / 1024).toFixed(2);

            previewDiv.innerHTML = `
                <div class="file-preview">
                    <div class="file-info">
                        <i class="fas fa-${type === 'pdf' ? 'file-pdf' : 'image'}" style="font-size: 1.5rem; color: #28a745;"></i>
                        <div>
                            <strong>${fileName}</strong>
                            <p style="font-size: 0.85rem; color: #666; margin: 0;">${fileSize} MB</p>
                        </div>
                    </div>
                    <button class="btn-remove-file" onclick="removeFile('${type}')">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `;
        }

        function removeFile(type) {
            document.getElementById(type + 'File').value = '';
            document.getElementById(type + 'Upload').classList.remove('has-file');
            document.getElementById(type + 'Preview').innerHTML = '';
        }

        function enviarOficio() {
            if (!document.getElementById('destinatario').value) {
                alert('Por favor ingrese el destinatario');
                return;
            }
            if (!document.getElementById('fecha').value) {
                alert('Por favor ingrese la fecha');
                return;
            }
            if (!document.getElementById('oficioNo').value) {
                alert('Por favor ingrese el número de oficio');
                return;
            }
            if (!document.getElementById('contenido').value) {
                alert('Por favor ingrese la descripción de la solicitud');
                return;
            }
            if (!document.getElementById('pdfFile').files[0]) {
                alert('Debe subir el PDF del oficio');
                return;
            }

            const tbody = document.getElementById('materialTableBody');
            let hasMaterial = false;
            for (let i = 0; i < tbody.rows.length; i++) {
                const descripcion = tbody.rows[i].cells[2].querySelector('input').value;
                if (descripcion.trim()) {
                    hasMaterial = true;
                    break;
                }
            }

            if (!hasMaterial) {
                alert('Debe agregar al menos un material');
                return;
            }

            if (confirm('¿Está seguro de enviar este oficio al Almacén de Servicios Primarios?')) {
                alert('Oficio enviado correctamente al Almacén.\n\nPodrá consultar el estado de su solicitud en esta misma pantalla.');
                closeModal();
            }
        }

        window.onclick = function(event) {
            const modal = document.getElementById('oficioModal');
            if (event.target === modal) {
                closeModal();
            }
        }
    </script>

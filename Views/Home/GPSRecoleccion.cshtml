            grid.innerHTML = units.map(unit => `
                <div class="unit-card" onclick="selectUnit('${unit.id}', event)">
                    <div class="unit-icon">
                        <i class="fas fa-truck-pickup"></i>
                    </div>
                    <div class="unit-number">${unit.id}</div>
                    <div class="unit-name">${unit.name}</div>
                    <div class="unit-details">
                        <div class="detail-item">
                            <i class="fas fa-user"></i>
                            <span>${unit.operator}</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-signal"></i>
                            <span class="unit-status ${unit.status}">
                                <span class="unit-status-dot" style="background: var(--${unit.status === 'active' ? 'success' : 'danger'});"></span>
                                ${unit.status === 'active' ? 'En Operación' : 'Inactiva'}
                            </span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>${unit.zone}</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-clock"></i>
                            <span>${unit.schedule}</span>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function pulseStatusDots() {
            const dots = document.querySelectorAll('.unit-status-dot, .status-indicator');
            let opacity = 1;
            let direction = -1;

            setInterval(() => {
                opacity += direction * 0.03;
                if (opacity <= 0.4 || opacity >= 1) {
                    direction *= -1;
                }
                dots.forEach(dot => {
                    dot.style.opacity = opacity;
                });
            }, 50);
        }

        function rotateSpinner() {
            const spinner = document.querySelector('.spinner');
            let rotation = 0;

            setInterval(() => {
                rotation += 5;
                if (spinner && !document.getElementById('loadingOverlay').classList.contains('hidden')) {
                    spinner.style.transform = `rotate(${rotation}deg)`;
                }
            }, 16);
        }

        function showNotification(message, type = 'info') {
            const existingNotifications = document.querySelectorAll('.notification');
            existingNotifications.forEach(notif => {
                if (document.body.contains(notif)) {
                    document.body.removeChild(notif);
                }
            });

            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => notification.classList.add('show'), 100);

            setTimeout(() => {
                if (document.body.contains(notification)) {
                    notification.classList.remove('show');
                    setTimeout(() => {
                        if (document.body.contains(notification)) {
                            document.body.removeChild(notification);
                        }
                    }, 400);
                }
            }, 3500);
        }

        function refreshGPS() {
            showNotification('Actualizando ubicaciones GPS...', 'info');
            const iframe = document.getElementById('gpsFrame');
            const currentSrc = iframe.src;
            iframe.src = '';
            setTimeout(() => {
                iframe.src = currentSrc;
                showNotification('Mapa GPS actualizado correctamente', 'success');
            }, 500);
        }

        function fullscreenGPS() {
            const wrapper = document.getElementById('gpsWrapper');
            if (wrapper.requestFullscreen) {
                wrapper.requestFullscreen();
            } else if (wrapper.webkitRequestFullscreen) {
                wrapper.webkitRequestFullscreen();
            } else if (wrapper.msRequestFullscreen) {
                wrapper.msRequestFullscreen();
            }
            showNotification('Modo pantalla completa activado', 'info');
        }

        function selectUnit(unitId, event) {
            const cards = document.querySelectorAll('.unit-card');
            cards.forEach(card => card.classList.remove('selected'));
            event.currentTarget.classList.add('selected');
            showNotification(`Rastreando unidad: ${unitId}`, 'info');
        }

        document.getElementById('gpsFrame').addEventListener('load', function() {
            setTimeout(() => {
                const overlay = document.getElementById('loadingOverlay');
                if (overlay) {
                    overlay.classList.add('hidden');
                    showNotification('Sistema GPS cargado correctamente', 'success');
                }
            }, 1500);
        });

        document.addEventListener('DOMContentLoaded', () => {
            renderUnits();
            pulseStatusDots();
            rotateSpinner();
            setTimeout(() => {
                showNotification('Sistema de rastreo GPS inicializado', 'success');
            }, 1000);
        });
    </script>
</body>
</html>
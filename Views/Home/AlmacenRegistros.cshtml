                <div class="registro-timeline">
                    <div class="timeline-step">
                        <div class="timeline-icon"><i class="fas fa-file-alt"></i></div>
                        <div class="timeline-info">
                            <strong>Solicitado</strong>
                            <span>28/Ago/2025</span>
                        </div>
                    </div>
                    <div class="timeline-step">
                        <div class="timeline-icon"><i class="fas fa-check"></i></div>
                        <div class="timeline-info">
                            <strong>Aprobado Almacén</strong>
                            <span>29/Ago/2025</span>
                        </div>
                    </div>
                    <div class="timeline-step">
                        <div class="timeline-icon"><i class="fas fa-shopping-cart"></i></div>
                        <div class="timeline-info">
                            <strong>Adquirido</strong>

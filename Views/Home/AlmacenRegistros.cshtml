                color: #C41E3A;
            }

        .badge-completed {
            background: #d4edda;
            color: #155724;
            padding: 0.4rem 0.8rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .registro-timeline {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid #e0e0e0;
        }

        .timeline-step {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.85rem;
        }

        .timeline-icon {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background: #28a745;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9rem;
        }

        .timeline-info {
            flex: 1;
        }

            .timeline-info strong {
                display: block;
                color: #333;
            }

            .timeline-info span {
                color: #666;
                font-size: 0.8rem;
            }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 1000;
            overflow-y: auto;
        }

            .modal.active {
                display: flex;
                align-items: center;
                justify-content: center;
                padding: 2rem;
            }

        .modal-content {
            background: white;
            border-radius: 12px;
            width: 100%;
            max-width: 1400px;
            max-height: 90vh;
            overflow-y: auto;
        }

        .modal-header {
            background: linear-gradient(135deg, #8B0000 0%, #C41E3A 100%);
            color: white;
            padding: 1.5rem 2rem;
            border-radius: 12px 12px 0 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .modal-header h2 {
                font-size: 1.5rem;
                font-weight: 600;
            }

        .btn-close {
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .modal-body {
            padding: 2rem;
        }

        .detail-section {
            margin-bottom: 2rem;
        }

        .section-title-modal {
            font-size: 1.2rem;
            font-weight: 600;
            color: #8B0000;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #e0e0e0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        .info-item {
            display: flex;
            flex-direction: column;
            gap: 0.3rem;
        }

        .info-label {
            font-size: 0.85rem;
            font-weight: 600;
            color: #666;
            text-transform: uppercase;
        }

        .info-value {
            font-size: 1rem;
            color: #333;
            font-weight: 500;
        }

        .timeline-complete {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-top: 1rem;
        }

        .timeline-card {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 10px;
            border-left: 4px solid #28a745;
        }

            .timeline-card h4 {
                color: #333;
                margin-bottom: 0.5rem;
                font-size: 1rem;
            }

            .timeline-card p {
                color: #666;
                font-size: 0.9rem;
                margin-bottom: 0.3rem;
            }

        .material-table-wrapper {
            width: 100%;
            overflow-x: auto;
            margin-top: 1rem;
            border: 1px solid #ddd;
            border-radius: 8px;
        }

        .material-table {
            width: 100%;
            min-width: 700px;
            border-collapse: collapse;
        }

            .material-table th {
                background: #f8f9fa;
                padding: 1rem;
                text-align: left;
                font-weight: 600;
                border-bottom: 2px solid #ddd;
            }

            .material-table td {
                padding: 0.8rem;
                border-bottom: 1px solid #e0e0e0;
            }

            .material-table tbody tr:last-child td {
                border-bottom: none;
            }

        .doc-list {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .doc-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 8px;
            border: 1px solid #e0e0e0;
        }

        .doc-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .doc-icon {
            width: 45px;
            height: 45px;
            background: #C41E3A;
            color: white;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
        }

        .btn-view-doc {
            padding: 0.5rem 1.2rem;
            background: #007bff;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 500;
            transition: background 0.3s;
        }

            .btn-view-doc:hover {
                background: #0056b3;
            }

        .modal-footer {
            padding: 1.5rem 2rem;
            border-top: 1px solid #e0e0e0;
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
        }

        .btn-print {
            padding: 0.8rem 2rem;
            background: #6c757d;
            color: white;
            border: none;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .btn-print:hover {
                background: #5a6268;
            }

    </style>
</head>
<body>
    <header class="header">
        <div class="header-content">
            <div class="header-title">
                <h1><i class="fas fa-archive"></i> Almacén de Registros</h1>
                <p>Historial Completo de Solicitudes Procesadas y Completadas</p>
            </div>
            <div class="header-actions">
                <button class="btn-export" onclick="exportarRegistros()">
                    <i class="fas fa-file-excel"></i> Exportar
                </button>
                <a href="/Home/InicioAlmacen" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon blue">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-info">
                    <h3>247</h3>
                    <p>Total Completados</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon green">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <div class="stat-info">
                    <h3>23</h3>
                    <p>Este Mes</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon orange">
                    <i class="fas fa-box"></i>
                </div>
                <div class="stat-info">
                    <h3>1,847</h3>
                    <p>Items Registrados</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon purple">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-info">
                    <h3>5.2</h3>
                    <p>Días Promedio</p>
                </div>
            </div>
        </div>

        <div class="filters-section">
            <div class="filters-title">
                <i class="fas fa-search"></i> Búsqueda Avanzada
            </div>
            <div class="filters-grid">
                <div class="filter-group">
                    <label>Departamento</label>
                    <select id="filterDept">
                        <option value="">Todos</option>
                        <option value="alumbrado">Alumbrado Público</option>
                        <option value="bacheo">Bacheo</option>
                        <option value="recoleccion">Recolección de Basura</option>
                        <option value="parques">Parques y Jardines</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label>Mes de Completado</label>
                    <select id="filterMonth">
                        <option value="">Todos</option>
                        <option value="2025-10">Octubre 2025</option>
                        <option value="2025-09">Septiembre 2025</option>
                        <option value="2025-08">Agosto 2025</option>
                        <option value="2025-07">Julio 2025</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label>Número de Oficio</label>
                    <input type="text" id="filterOficio" placeholder="Ej: DSERVPRIM/1445">
                </div>
                <div class="filter-group">
                    <label>Solicitante</label>
                    <input type="text" id="filterSolicitante" placeholder="Nombre del solicitante">
                </div>
                <div class="filter-group">
                    <label>Fecha Desde</label>
                    <input type="date" id="filterDateFrom">
                </div>
                <div class="filter-group">
                    <label>Fecha Hasta</label>
                    <input type="date" id="filterDateTo">
                </div>
            </div>
            <div class="filter-actions">
                <button class="btn-filter" onclick="aplicarFiltros()">
                    <i class="fas fa-search"></i> Buscar
                </button>
                <button class="btn-clear" onclick="limpiarFiltros()">
                    <i class="fas fa-eraser"></i> Limpiar Filtros
                </button>
            </div>
        </div>

        <div class="registros-section">
            <div class="section-header">
                <h2 class="section-title">Registros Históricos</h2>
                <span style="color: #666; font-size: 0.95rem;">Mostrando: <strong id="countRegistros">5</strong> registros</span>
            </div>

            <div class="registro-card" onclick="abrirDetalle(1)">
                <div class="registro-header">
                    <div class="registro-info">
                        <h3>Oficio No. BACHEO/0847/2025</h3>
                        <div class="registro-meta">
                            <span class="meta-item">
                                <i class="fas fa-road"></i>
                                <strong>Bacheo</strong>
                            </span>
                            <span class="meta-item">
                                <i class="fas fa-user"></i>
                                Director de Bacheo
                            </span>
                            <span class="meta-item">
                                <i class="fas fa-calendar-check"></i>
                                Completado: 28/Sep/2025
                            </span>
                        </div>
                    </div>
                    <span class="badge-completed"><i class="fas fa-check"></i> Completado</span>
                </div>
                <p style="color: #666; margin-bottom: 0.5rem;">Asfalto en frío 50kg para reparaciones - 20 sacos adquiridos</p>
                <div class="registro-timeline">
                    <div class="timeline-step">
                        <div class="timeline-icon"><i class="fas fa-file-alt"></i></div>
                        <div class="timeline-info">
                            <strong>Solicitado</strong>
                            <span>15/Sep/2025</span>
                        </div>
                    </div>
                    <div class="timeline-step">
                        <div class="timeline-icon"><i class="fas fa-check"></i></div>
                        <div class="timeline-info">
                            <strong>Aprobado Almacén</strong>
                            <span>16/Sep/2025</span>
                        </div>
                    </div>
                    <div class="timeline-step">
                        <div class="timeline-icon"><i class="fas fa-shopping-cart"></i></div>
                        <div class="timeline-info">
                            <strong>Adquirido</strong>
                            <span>25/Sep/2025</span>
                        </div>
                    </div>
                    <div class="timeline-step">
                        <div class="timeline-icon"><i class="fas fa-truck"></i></div>
                        <div class="timeline-info">
                            <strong>Entregado</strong>
                            <span>28/Sep/2025</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="registro-card" onclick="abrirDetalle(2)">
                <div class="registro-header">
                    <div class="registro-info">
                        <h3>Oficio No. ALUM/1234/2025</h3>
                        <div class="registro-meta">
                            <span class="meta-item">
                                <i class="fas fa-lightbulb"></i>
                                <strong>Alumbrado Público</strong>
                            </span>
                            <span class="meta-item">
                                <i class="fas fa-user"></i>
                                Luis Alberto Estrada
                            </span>
                            <span class="meta-item">
                                <i class="fas fa-calendar-check"></i>
                                Completado: 20/Sep/2025
                            </span>
                        </div>
                    </div>
                    <span class="badge-completed"><i class="fas fa-check"></i> Completado</span>
                </div>
                <p style="color: #666; margin-bottom: 0.5rem;">Luminarias LED 150W - 45 piezas para Col. Centro</p>
                <div class="registro-timeline">
                    <div class="timeline-step">
                        <div class="timeline-icon"><i class="fas fa-file-alt"></i></div>
                        <div class="timeline-info">
                            <strong>Solicitado</strong>
                            <span>05/Sep/2025</span>
                        </div>
                    </div>
                    <div class="timeline-step">
                        <div class="timeline-icon"><i class="fas fa-check"></i></div>
                        <div class="timeline-info">
                            <strong>Aprobado Almacén</strong>
                            <span>06/Sep/2025</span>
                        </div>
                    </div>
                    <div class="timeline-step">
                        <div class="timeline-icon"><i class="fas fa-shopping-cart"></i></div>
                        <div class="timeline-info">
                            <strong>Adquirido</strong>
                            <span>18/Sep/2025</span>
                        </div>
                    </div>
                    <div class="timeline-step">
                        <div class="timeline-icon"><i class="fas fa-truck"></i></div>
                        <div class="timeline-info">
                            <strong>Entregado</strong>
                            <span>20/Sep/2025</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="registro-card" onclick="abrirDetalle(3)">
                <div class="registro-header">
                    <div class="registro-info">
                        <h3>Oficio No. LIMPIA/0982/2025</h3>
                        <div class="registro-meta">
                            <span class="meta-item">
                                <i class="fas fa-broom"></i>
                                <strong>Recolección de Basura</strong>
                            </span>
                            <span class="meta-item">
                                <i class="fas fa-user"></i>
                                María Uscanga
                            </span>
                            <span class="meta-item">
                                <i class="fas fa-calendar-check"></i>
                                Completado: 10/Sep/2025
                            </span>
                        </div>
                    </div>
                    <span class="badge-completed"><i class="fas fa-check"></i> Completado</span>
                </div>

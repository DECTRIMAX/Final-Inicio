    <script>
        function toggleArea(areaId) {
            const content = document.getElementById('content-' + areaId);
            const toggle = document.getElementById('toggle-' + areaId);
            const header = toggle.closest('.area-header');

            const isActive = content.classList.contains('active');

            const allContents = document.querySelectorAll('.area-content');
            const allToggles = document.querySelectorAll('.toggle-icon');
            const allHeaders = document.querySelectorAll('.area-header');

            for (let i = 0; i < allContents.length; i++) {
                allContents[i].classList.remove('active');
            }
            for (let i = 0; i < allToggles.length; i++) {
                allToggles[i].classList.remove('active');
            }
            for (let i = 0; i < allHeaders.length; i++) {
                allHeaders[i].classList.remove('active');
            }

            if (!isActive) {
                content.classList.add('active');
                toggle.classList.add('active');
                header.classList.add('active');
            }
        }

        function toggleSubsection(subsectionId) {
            const content = document.getElementById('content-sub-' + subsectionId);
            const toggle = document.getElementById('toggle-sub-' + subsectionId);

            const isActive = content.classList.contains('active');

            const allSubContents = document.querySelectorAll('.subsection-content');
            const allSubToggles = document.querySelectorAll('.subsection-toggle');

            for (let i = 0; i < allSubContents.length; i++) {
                allSubContents[i].classList.remove('active');
            }
            for (let i = 0; i < allSubToggles.length; i++) {
                allSubToggles[i].classList.remove('active');
            }

            if (!isActive) {
                content.classList.add('active');
                toggle.classList.add('active');
            }
        }

        function navigateTo(url) {
            showNotification('Accediendo al módulo...', 'success');
            setTimeout(function() {
                window.location.href = url;
            }, 500);
        }

        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = 'notification ' + type;
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(function() {
                notification.classList.add('show');
            }, 100);

            setTimeout(function() {
                notification.classList.remove('show');
                setTimeout(function() {
                    document.body.removeChild(notification);
                }, 300);
            }, 2000);
        }

        function setupPhotoUpload(elementId, inputId) {
            const element = document.getElementById(elementId);
            const input = document.getElementById(inputId);

            element.addEventListener('click', function(e) {
                e.stopPropagation();
                input.click();
            });

            input.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(event) {
                        element.innerHTML = '<img src="' + event.target.result + '" alt="Imagen">';
                        showNotification('Imagen actualizada correctamente', 'success');
                    };
                    reader.readAsDataURL(file);
                }
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            setupPhotoUpload('logoMunicipal', 'logoMunicipalInput');
            setupPhotoUpload('logoRecoleccion', 'logoRecoleccionInput');
            setupPhotoUpload('userAvatar', 'userPhotoInput');

            setTimeout(function() {
                showNotification('Sistema inicializado correctamente', 'success');
            }, 500);
        });
    </script>

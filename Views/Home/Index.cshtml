    <!-- Servicios Digitales -->
    <section id="servicios" class="services-section">
        <div class="container">
            <div class="section-header">
                <span class="section-badge">Accesos por Rol</span>
                <h2>Plataforma de Servicios Digitales</h2>
                <p>Accede a herramientas especializadas según tu rol en el ecosistema municipal de Monclova</p>
                <div class="header-decoration"></div>
            </div>

            <div class="services-grid">
                <div class="service-card citizen-service">
                    <div class="card-header">
                        <div class="service-icon">
                            <i class="fas fa-user-friends"></i>
                        </div>
                        <div class="card-badge">Acceso Público</div>
                    </div>

                    <h3>Portal Ciudadano</h3>
                    <p class="service-description">
                        Plataforma intuitiva para ciudadanos que permite realizar reportes, consultas y
                        mantenerse informado sobre servicios municipales de forma rápida y segura.
                    </p>

                    <div class="service-features">
                        <div class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Reportes ciudadanos en tiempo real</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Consulta de trámites y servicios</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Información pública y transparencia</span>
                        </div>
                    </div>

                    <a href="@Url.Action("Login", "Account")" class="service-btn citizen-btn">
                        <i class="fas fa-user-circle"></i>
                        <span>Acceder como Ciudadano</span>
                    </a>
                </div>

                <div class="service-card employee-service">
                    <div class="card-header">
                        <div class="service-icon">
                            <i class="fas fa-briefcase"></i>
                        </div>
                        <div class="card-badge">Área Interna</div>
                    </div>

                    <h3>Sistema de Empleados</h3>
                    <p class="service-description">
                        Herramientas profesionales para empleados municipales que optimizan la gestión
                        departamental y mejoran la eficiencia en el servicio público.
                    </p>

                    <div class="service-features">
                        <div class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Gestión departamental especializada</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Reportes y estadísticas avanzadas</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Control de tareas y casos asignados</span>
                        </div>
                    </div>

                    <a href="@Url.Action("Login", "Account")" class="service-btn employee-btn">
                        <i class="fas fa-briefcase"></i>
                        <span>Acceder como Empleado</span>
                    </a>
                </div>

                <div class="service-card admin-service">
                    <div class="card-header">
                        <div class="service-icon">
                            <i class="fas fa-crown"></i>
                        </div>
                        <div class="card-badge">Nivel Ejecutivo</div>
                    </div>

                    <h3>Panel Administrativo</h3>
                    <p class="service-description">
                        Centro de comando integral para administradores con controles avanzados,
                        analíticas en tiempo real y gestión completa del sistema municipal.
                    </p>

                    <div class="service-features">
                        <div class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Control total del ecosistema digital</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Dashboard ejecutivo con métricas clave</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Reportes generales del municipio</span>
                        </div>
                    </div>

                    <a href="@Url.Action("Login", "Account")" class="service-btn admin-btn">
                        <i class="fas fa-crown"></i>
                        <span>Acceder como Administrador</span>
                    </a>
                </div>
            </div>


    <script>
        // Función para alternar el menú móvil
        function toggleMenu() {
            const navLinks = document.getElementById('navLinks');
            const overlay = document.getElementById('menuOverlay');
            const icon = document.querySelector('.mobile-menu-btn i');

            if (document.body.classList.contains('mobile-nav-visible')) {
                // Cerrar menú
                document.body.classList.remove('mobile-nav-visible');
                overlay.classList.remove('active');
                icon.classList.remove('fa-times');
                icon.classList.add('fa-bars');
                document.body.style.overflow = '';

                // Ocultar en móvil después de cerrar
                if (window.innerWidth <= 768) {
                    navLinks.style.display = 'none';
                }
            } else {
                // Abrir menú
                document.body.classList.add('mobile-nav-visible');
                navLinks.style.display = 'flex';
                overlay.classList.add('active');
                icon.classList.remove('fa-bars');
                icon.classList.add('fa-times');
                document.body.style.overflow = 'hidden';
            }
        }

        // Función para cerrar el menú móvil
        function closeMenu() {
            if (document.body.classList.contains('mobile-nav-visible')) {
                const navLinks = document.getElementById('navLinks');
                const overlay = document.getElementById('menuOverlay');
                const icon = document.querySelector('.mobile-menu-btn i');

                document.body.classList.remove('mobile-nav-visible');
                overlay.classList.remove('active');
                icon.classList.remove('fa-times');
                icon.classList.add('fa-bars');
                document.body.style.overflow = '';

                // Ocultar en móvil después de cerrar
                if (window.innerWidth <= 768) {
                    navLinks.style.display = 'none';
                }
            }
        }

        // Función para manejar responsividad
        function handleResponsive() {
            const width = window.innerWidth;
            const mobileBtn = document.getElementById('mobileMenuBtn');
            const navLinks = document.getElementById('navLinks');

            // Mostrar/ocultar botón móvil según ancho
            if (width <= 768) {
                mobileBtn.style.display = 'block';
                // Ocultar nav-links en desktop cuando es móvil
                if (!document.body.classList.contains('mobile-nav-visible')) {
                    navLinks.style.display = 'none';
                }
            } else {
                mobileBtn.style.display = 'none';
                navLinks.style.display = 'flex';
                navLinks.style.position = 'static';
                navLinks.style.width = 'auto';
                navLinks.style.height = 'auto';
                navLinks.style.flexDirection = 'row';
                navLinks.style.padding = '0';
                navLinks.style.background = 'transparent';
                navLinks.style.boxShadow = 'none';
                closeMenu();
            }

            // Aplicar clases según tamaño de pantalla
            if (width <= 480) {
                document.body.classList.add('is-small-screen');
            } else {
                document.body.classList.remove('is-small-screen');
            }

            if (width <= 360) {
                document.body.classList.add('is-extra-small');
            } else {
                document.body.classList.remove('is-extra-small');
            }

            if (width <= 1024) {
                document.body.classList.add('is-tablet');
            } else {
                document.body.classList.remove('is-tablet');
            }

            // Ajustar menú móvil en pantallas muy pequeñas
            if (width <= 480 && document.body.classList.contains('mobile-nav-visible')) {
                navLinks.style.width = '100%';
            } else if (document.body.classList.contains('mobile-nav-visible')) {
                navLinks.style.width = '280px';
            }

            // Ajustar grid de servicios
            adjustServicesGrid();
        }

        // Función para ajustar grid de servicios dinámicamente
        function adjustServicesGrid() {
            const width = window.innerWidth;
            const servicesGrid = document.querySelector('.services-grid');
            const primaryGrid = document.querySelector('.primary-services-grid');

            if (servicesGrid) {
                if (width <= 768) {
                    servicesGrid.style.gridTemplateColumns = '1fr';
                } else if (width <= 1024) {
                    servicesGrid.style.gridTemplateColumns = 'repeat(2, 1fr)';
                } else {
                    servicesGrid.style.gridTemplateColumns = 'repeat(auto-fit, minmax(22rem, 1fr))';
                }
            }

            if (primaryGrid) {
                if (width <= 768) {
                    primaryGrid.style.gridTemplateColumns = '1fr';
                } else if (width <= 1024) {
                    primaryGrid.style.gridTemplateColumns = 'repeat(2, 1fr)';
                } else {
                    primaryGrid.style.gridTemplateColumns = 'repeat(auto-fit, minmax(22rem, 1fr))';
                }
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar responsividad
            handleResponsive();

            // Smooth scrolling para enlaces internos
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        closeMenu();
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });

            // Navbar scroll effect
            const navbar = document.querySelector('.top-navbar');
            let lastScroll = 0;

            window.addEventListener('scroll', () => {
                const currentScroll = window.pageYOffset;

                if (currentScroll > 100) {
                    navbar.style.boxShadow = '0 4px 30px rgba(0, 0, 0, 0.15)';
                } else {
                    navbar.style.boxShadow = '0 2px 20px rgba(0, 0, 0, 0.1)';
                }

                if (currentScroll > lastScroll && currentScroll > 80) {
                    navbar.classList.add('hide');
                } else {
                    navbar.classList.remove('hide');
                }

                lastScroll = currentScroll;
            });

            // Cerrar menú al hacer clic fuera
            document.addEventListener('click', function(event) {
                const navLinks = document.getElementById('navLinks');
                const mobileBtn = document.getElementById('mobileMenuBtn');

                if (document.body.classList.contains('mobile-nav-visible') &&
                    !navLinks.contains(event.target) &&
                    !mobileBtn.contains(event.target)) {
                    closeMenu();
                }
            });

            // Cerrar menú con tecla ESC
            document.addEventListener('keydown', function(event) {
                if (event.key === 'Escape') {
                    closeMenu();
                }
            });

            // Manejo de errores de imágenes
            const images = document.querySelectorAll('img[onerror]');
            images.forEach(img => {
                img.addEventListener('error', function() {
                    this.style.display = 'none';
                    const placeholder = this.nextElementSibling;
                    if (placeholder) {
                        placeholder.style.display = 'flex';
                    }
                });

                if (!img.complete || img.naturalWidth === 0) {
                    img.style.display = 'none';
                    const placeholder = img.nextElementSibling;
                    if (placeholder) {
                        placeholder.style.display = 'flex';
                    }
                }
            });

            // Botón de ayuda
            const helpButton = document.querySelector('.help-button');
            if (helpButton) {
                helpButton.addEventListener('click', function() {
                    alert('¿Necesitas ayuda?\n\nContacta con nosotros:\n\nTeléfono: (866) 123-4567\nEmail: soporte@monclova.gob.mx\n\nHorario: Lun - Vie, 8:00 AM - 5:00 PM');
                });
            }

            // Ajustar en resize
            let resizeTimer;
            window.addEventListener('resize', function() {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(handleResponsive, 250);
            });

            console.log('✓ Sistema Municipal Monclova - Inicializado correctamente');
            console.log('✓ Versión: 2025.2.3');
        });

        // Precarga de imágenes críticas
        window.addEventListener('load', function() {
            console.log('✓ Recursos cargados completamente');
        });
    </script>

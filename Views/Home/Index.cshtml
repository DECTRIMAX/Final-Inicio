                            <div class="service-photo-placeholder">
                                <i class="fas fa-road"></i>
                                <span>Bacheo</span>
                            </div>
                        </div>
                        <div class="circular-logo">
                            <img src="~/imagenes/logo-bacheo.png" alt="Logo Bacheo" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <div class="logo-fallback">
                                <i class="fas fa-road"></i>
                            </div>
                        </div>
                    </div>

    <script>
        const systemData = {
            version: '2.1.0',
            lastUpdate: new Date().toLocaleDateString('es-MX'),
            municipality: 'Monclova, Coahuila de Zaragoza',
            status: 'Operativo',
            uptime: '98.7%'
        };

        function navigateTo(section) {
            console.log('Navegando a:', section);
            const sectionNames = {
                'programacion': 'Programación de Obras de Bacheo',
                'captura': 'Sistema de Captura de Bacheo',
                'mapa': 'Mapa Interactivo de Bacheo',
                'rastreo': 'Sistema de Rastreo GPS de Unidades',
                'dashboard': 'Dashboard Ejecutivo de Bacheo',
                'reportes': 'Portal de Reportes Ciudadanos',
                'material': 'Sistema de Control de Materiales',
                'asistencia': 'Control de Asistencia de Personal',
                'repositorio': 'Repositorio de Unidades de Bacheo',
                'oficios': 'Sistema de Oficios de Bacheo',
                'citas': 'Agendar Citas de Mantenimiento'
            };

            const sectionFiles = {
                'captura': '/Home/CapturaBacheo',
                'mapa': '/Home/MapaBacheo',
                'rastreo': '/Home/RastreoBacheo',
                'dashboard': '/Home/DashboardBacheo',
                'reportes': '/Home/ReportesBacheo',
                'material': '/Home/MaterialUtilizadoBacheo',
                'asistencia': '/Home/AsistenciaPersonalBacheo',
                'programacion': '/Home/ProgramacionBacheo',
                'repositorio': '/Home/RepositorioPlacasBacheo',
                'oficios': '/Home/EnviarOficiosAlmacenBacheo',
                'citas': '/Home/AgendarCitasMantenimiento'
            };

            const sectionName = sectionNames[section] || section;
            showNotification(`Accediendo a: ${sectionName}`, 'info');

            setTimeout(() => {
                if (sectionFiles[section]) {
                    window.location.href = sectionFiles[section];
                } else {
                    showNotification(`Módulo cargado correctamente`, 'success');
                }
            }, 1500);
        }

        function showNotification(message, type = 'info') {
            const existingNotifications = document.querySelectorAll('.notification');
            existingNotifications.forEach(notif => {
                if (document.body.contains(notif)) {
                    hideNotification(notif);
                }
            });

            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.classList.add('show');
            }, 100);

            const hideDelay = type === 'error' ? 6000 : type === 'success' ? 4000 : 3000;

            notification.addEventListener('click', () => {
                hideNotification(notification);
            });

            setTimeout(() => {
                if (document.body.contains(notification)) {
                    hideNotification(notification);
                }
            }, hideDelay);
        }

        function hideNotification(notification) {
            if (notification && document.body.contains(notification)) {
                notification.classList.remove('show');
                setTimeout(() => {
                    if (document.body.contains(notification)) {
                        document.body.removeChild(notification);
                    }
                }, 400);
            }
        }

        function protectInstitutionalImages() {
            const institutionalElements = document.querySelectorAll('.institutional-image');
            institutionalElements.forEach(element => {
                element.addEventListener('click', (e) => {
                    e.preventDefault();
                    e.stopPropagation();
                    showNotification('Esta imagen está protegida por el sistema', 'warning');
                });
                element.style.cursor = 'default';
            });
        }

        function setupPhotoUpload(avatarId, inputId) {
            const avatar = document.getElementById(avatarId);
            const input = document.getElementById(inputId);

            if (!avatar || !input) return;

            avatar.addEventListener('click', () => input.click());

            input.addEventListener('change', (e) => {
                const file = e.target.files[0];
                if (file) {
                    if (!file.type.startsWith('image/')) {
                        showNotification('Por favor selecciona un archivo de imagen válido', 'error');
                        return;
                    }

                    if (file.size > 5 * 1024 * 1024) {
                        showNotification('La imagen es demasiado grande. Máximo 5MB', 'error');
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = (e) => {
                        avatar.innerHTML = `<img src="${e.target.result}" alt="Foto de perfil">`;
                        showNotification('Foto actualizada correctamente', 'success');
                    };
                    reader.onerror = () => showNotification('Error al cargar la imagen', 'error');
                    reader.readAsDataURL(file);
                }
            });
        }

        function updateStats() {
            const statNumbers = document.querySelectorAll('.stat-number');
            const baseValues = [
                { base: 1847, variance: 25 },
                { base: 385, variance: 12 },
                { base: 67, variance: 15 },
                { base: 15, variance: 3 },
                { base: 3250, variance: 75 },
                { base: 100, variance: 0, suffix: '%' },
                { base: 24, variance: 0, suffix: '/7' },
                { base: 48, variance: 0, suffix: 'hrs' },
                { base: 88.5, variance: 2, suffix: '%' },
                { base: 96.3, variance: 1.5, suffix: '%' },
                { base: 85, variance: 5, suffix: '%' },
                { base: 42, variance: 3 }
            ];

            statNumbers.forEach((element, index) => {
                if (baseValues[index]) {
                    const config = baseValues[index];
                    const variation = (Math.random() - 0.5) * config.variance;
                    const newValue = Math.max(0, config.base + variation);

                    let displayValue;
                    if (config.suffix === '%') {
                        displayValue = newValue.toFixed(1) + '%';
                    } else if (config.suffix === '/7') {
                        displayValue = Math.round(newValue) + '/7';
                    } else if (config.suffix === 'hrs') {
                        displayValue = Math.round(newValue) + 'hrs';
                    } else {
                        displayValue = Math.round(newValue).toLocaleString();
                    }

                    if (element.textContent !== displayValue) {
                        element.style.transition = 'all 0.3s ease';
                        element.style.transform = 'scale(1.1)';
                        element.textContent = displayValue;

                        setTimeout(() => {
                            element.style.transform = 'scale(1)';
                        }, 300);
                    }
                }
            });
        }

        document.addEventListener('DOMContentLoaded', () => {
            setupPhotoUpload('userAvatar', 'userPhotoInput');
            protectInstitutionalImages();

            setTimeout(() => {
                showNotification('Sistema Municipal de Bacheo inicializado correctamente', 'success');
            }, 1000);

            console.log('✅ Sistema de Bacheo Municipal de Monclova - Cargado completamente');
            console.log('Versión:', systemData.version);
            console.log('Estado: Operativo y Responsivo');
        });

        setInterval(updateStats, 60000);
    </script>

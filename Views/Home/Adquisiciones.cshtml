                // Filtrar por departamento
                if (filterDept) {
                    const cardDept = card.getAttribute('data-departamento');
                    if (cardDept !== filterDept) {
                        show = false;
                    }
                }

                // Filtrar por estado
                if (filterStatus) {
                    const cardStatus = card.getAttribute('data-estado');
                    if (cardStatus !== filterStatus) {
                        show = false;
                    }
                }

                // Filtrar por prioridad
                if (filterPriority) {
                    const cardPriority = card.getAttribute('data-prioridad');
                    if (cardPriority !== filterPriority) {
                        show = false;
                    }
                }

                // Filtrar por fecha desde
                if (filterDateFrom) {
                    const cardDate = card.getAttribute('data-fecha');
                    if (cardDate < filterDateFrom) {
                        show = false;
                    }
                }

                // Filtrar por fecha hasta
                if (filterDateTo) {
                    const cardDate = card.getAttribute('data-fecha');
                    if (cardDate > filterDateTo) {
                        show = false;
                    }
                }

                // Mostrar u ocultar la tarjeta
                if (show) {
                    card.style.display = 'block';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });

            // Actualizar contador
            const totalSpan = document.querySelector('.list-header span');
            if (totalSpan) {
                if (visibleCount === cards.length) {
                    totalSpan.innerHTML = `Total: <strong>${cards.length}</strong> solicitudes`;
                } else {
                    totalSpan.innerHTML = `Mostrando: <strong>${visibleCount}</strong> de <strong>${cards.length}</strong> solicitudes`;
                }
            }

            // Mostrar mensaje si no hay resultados
            if (visibleCount === 0) {
                showNoResults();
            } else {
                removeNoResults();
            }
        }

        function showNoResults() {
            removeNoResults();
            const listDiv = document.querySelector('.solicitudes-list');
            const noResultsDiv = document.createElement('div');
            noResultsDiv.id = 'noResults';
            noResultsDiv.style.cssText = 'text-align: center; padding: 3rem; color: #666; margin-top: 2rem;';
            noResultsDiv.innerHTML = `
                <i class="fas fa-search" style="font-size: 3rem; color: #ddd; margin-bottom: 1rem; display: block;"></i>
                <h3 style="color: #999; margin-bottom: 0.5rem;">No se encontraron solicitudes</h3>
                <p>Intenta ajustar los filtros de búsqueda</p>
            `;
            listDiv.appendChild(noResultsDiv);
        }

        function removeNoResults() {
            const noResults = document.getElementById('noResults');
            if (noResults) {
                noResults.remove();
            }
        }

        function clearFilters() {
            // Limpiar todos los campos de filtro
            document.getElementById('filterDept').value = '';
            document.getElementById('filterStatus').value = '';
            document.getElementById('filterPriority').value = '';
            document.getElementById('filterDateFrom').value = '';
            document.getElementById('filterDateTo').value = '';

            // Mostrar todas las tarjetas
            const cards = document.querySelectorAll('.solicitud-card');
            cards.forEach(card => {
                card.style.display = 'block';
            });

            // Actualizar contador
            const totalSpan = document.querySelector('.list-header span');
            if (totalSpan) {
                totalSpan.innerHTML = `Total: <strong>${cards.length}</strong> solicitudes`;
            }

            // Quitar mensaje de "no hay resultados" si existe
            removeNoResults();
        }

        window.onclick = function(event) {
            const modal1 = document.getElementById('solicitudModal');
            const modal2 = document.getElementById('infoModal');
            const modal3 = document.getElementById('oficioModal');
            if (event.target === modal1) {
                closeModal();
            }
            if (event.target === modal2) {
                closeInfoModal();
            }
            if (event.target === modal3) {
                closeOficioModal();
            }
        }
    </script>

        function validateForm() {
            clearAllErrors();
            let isValid = true;

            // Required fields validation
            const requiredFields = [
                { id: 'reporterName', message: 'El nombre es requerido', minLength: 3 },
                { id: 'reporterPhone', message: 'El teléfono es requerido', minLength: 10 },
                { id: 'street', message: 'La calle es requerida' },
                { id: 'houseNumber', message: 'El número de casa es requerido' },
                { id: 'neighborhood', message: 'La colonia es requerida' },
                { id: 'department', message: 'Seleccione el tipo de servicio' },
                { id: 'description', message: 'La descripción del problema es requerida', minLength: 20 }
            ];

            requiredFields.forEach(field => {
                const element = document.getElementById(field.id);
                const value = element.value.trim();
                
                if (!value) {
                    showFieldError(field.id, field.message);
                    isValid = false;
                } else if (field.minLength && value.length < field.minLength) {
                    showFieldError(field.id, `${field.message.replace('requerido', '')} debe tener al menos ${field.minLength} caracteres`);
                    isValid = false;
                }
            });

            // Phone validation
            const phone = document.getElementById('reporterPhone').value.trim();
            if (phone && !isValidPhone(phone)) {
                showFieldError('reporterPhone', 'Ingrese un teléfono válido (10 dígitos)');
                isValid = false;
            }

            // Location validation (REQUIRED)
            if (!selectedMapLocation && !currentLocation) {
                showFieldError('location', 'Debe seleccionar la ubicación en el mapa');
                isValid = false;
            }

            // Photo validation (REQUIRED)
            if (uploadedFiles.length === 0) {
                showFieldError('photo', 'Debe subir al menos una fotografía del problema');
                isValid = false;
            }

            return isValid;
        }

        function isValidPhone(phone) {
            const phoneRegex = /^[\d\s\-\(\)\+]{10,}$/;

        function setupFileUpload() {
            const fileArea = document.getElementById('fileUploadArea');
            const fileInput = document.getElementById('problemPhoto');

            if (!fileArea || !fileInput) return;

            fileArea.addEventListener('click', function() {
                fileInput.click();
            });

            fileArea.addEventListener('dragover', function(e) {
                e.preventDefault();
                this.classList.add('dragover');
            });

            fileArea.addEventListener('dragleave', function(e) {
                e.preventDefault();
                this.classList.remove('dragover');
            });

            fileArea.addEventListener('drop', function(e) {
                e.preventDefault();
                this.classList.remove('dragover');
                const files = e.dataTransfer.files;
                handleFileSelection(files);
            });

            fileInput.addEventListener('change', function() {
                handleFileSelection(this.files);
            });
        }

        function handleFileSelection(files) {
            const maxFiles = 3;
            const maxSize = 5 * 1024 * 1024; // 5MB
            
            if (files.length > maxFiles) {
                showNotification(`Máximo ${maxFiles} archivos permitidos`, 'error');
                return;
            }

            uploadedFiles = [];
            const preview = document.getElementById('filePreview');
            preview.innerHTML = '';

            Array.from(files).forEach((file, index) => {
                if (!file.type.startsWith('image/')) {
                    showNotification('Solo se permiten archivos de imagen', 'error');
                    return;
                }

                if (file.size > maxSize) {
                    showNotification('El archivo es demasiado grande (máximo 5MB)', 'error');
                    return;
                }

                uploadedFiles.push(file);

                const reader = new FileReader();
                reader.onload = function(e) {
                    const fileDiv = document.createElement('div');
                    fileDiv.style.cssText = `
                        display: flex; 
                        align-items: center; 
                        gap: 10px; 
                        padding: 10px; 
                        background: rgba(26, 95, 26, 0.1); 
                        border-radius: 8px; 
                        border: 1px solid rgba(26, 95, 26, 0.3);
                        margin-bottom: 10px;
                    `;
                    
                    fileDiv.innerHTML = `
                        <img src="${e.target.result}" alt="Preview" style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px; cursor: pointer;" onclick="openImagePopup('${e.target.result}', '${file.name}')">
                        <div style="flex: 1;">
                            <div style="font-weight: 600; color: #1a5f1a;">${file.name}</div>
                            <div style="font-size: 12px; color: #666;">${(file.size / 1024).toFixed(1)} KB</div>
                        </div>
                        <button type="button" onclick="removeFile(${index})" style="background: #dc267f; color: white; border: none; padding: 4px 8px; border-radius: 4px; cursor: pointer;">
                            <i class="fas fa-times"></i>
                        </button>
                    `;
                    
                    preview.appendChild(fileDiv);
                };
                reader.readAsDataURL(file);
            });

            if (uploadedFiles.length > 0) {
                preview.style.display = 'block';
                clearFieldError('problemPhoto');
            }
        }

        function removeFile(index) {
            uploadedFiles.splice(index, 1);
            
            if (uploadedFiles.length === 0) {
                resetFileUpload();
            } else {
                // Re-render preview
                const fileInput = document.getElementById('problemPhoto');
                const dt = new DataTransfer();
                uploadedFiles.forEach(file => dt.items.add(file));
                fileInput.files = dt.files;
                handleFileSelection(uploadedFiles);
            }
        }

        function resetFileUpload() {
            const fileInput = document.getElementById('problemPhoto');
            const preview = document.getElementById('filePreview');

            if (fileInput) fileInput.value = '';
            if (preview) {
                preview.style.display = 'none';
                preview.innerHTML = '';
            }
            uploadedFiles = [];
        }

        // GEOLOCATION CORREGIDA
        function getCurrentLocation() {
            const btn = document.getElementById('getLocationBtn');
            if (!btn) return;

            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Obteniendo ubicación...';
            btn.disabled = true;

            if ("geolocation" in navigator) {
                navigator.geolocation.getCurrentPosition(
                    function(position) {
                        currentLocation = {
                            lat: position.coords.latitude,
                            lng: position.coords.longitude
                        };

                        // Set as selected location
                        selectedMapLocation = currentLocation;

                        // Update map if exists
                        if (reportMap) {
                            reportMap.setView([currentLocation.lat, currentLocation.lng], 16);
                            
                            // Remove previous marker
                            if (window.currentLocationMarker) {
                                reportMap.removeLayer(window.currentLocationMarker);
                            }
                            
                            // Add new marker
                            window.currentLocationMarker = L.marker([currentLocation.lat, currentLocation.lng], {
                                icon: L.divIcon({

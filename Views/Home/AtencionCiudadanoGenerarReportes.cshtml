<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generador de Reportes - Atención Ciudadana | Monclova</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --pri-green: #16a34a;
            --pri-green-light: #22c55e;
            --pri-green-dark: #15803d;
            --pri-green-darker: #14532d;
            --pri-white: #FFFFFF;
            --bg-light: #f0fdf4;
            --bg-green-light: #dcfce7;
            --text-dark: #1f2937;
            --text-gray: #4b5563;
            --shadow: rgba(22, 163, 74, 0.2);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg-green-light) 100%);
            color: var(--text-dark);
            line-height: 1.6;
            min-height: 100vh;
        }

        .header {
            background: linear-gradient(135deg, var(--pri-green) 0%, var(--pri-green-dark) 100%);
            color: var(--pri-white);
            padding: clamp(0.5rem, 2vw, 1rem) clamp(0.8rem, 3vw, 1.5rem);
            box-shadow: 0 4px 20px var(--shadow);
            position: sticky;
            top: 0;
            z-index: 1000;
            border-bottom: 3px solid var(--pri-green-darker);
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1400px;
            margin: 0 auto;
            gap: clamp(0.5rem, 2vw, 1.5rem);
            flex-wrap: wrap;
        }

        .back-btn {
            background: rgba(255, 255, 255, 0.2);
            color: var(--pri-white);
            border: 2px solid var(--pri-white);
            padding: 12px 24px;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
            flex-shrink: 0;
        }

            .back-btn:hover {
                background: var(--pri-white);
                color: var(--pri-green);
                transform: translateX(-3px);
            }

        .logo-section {
            display: flex;
            align-items: center;
            gap: clamp(0.5rem, 2vw, 1rem);
            flex: 1 1 auto;
            min-width: min(250px, 100%);
        }

        .logo {
            width: clamp(65px, 10vw, 80px);
            height: clamp(65px, 10vw, 80px);
            background: var(--pri-white);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid var(--pri-green-light);
            transition: all 0.3s ease;
            cursor: pointer;
            flex-shrink: 0;
            overflow: hidden;
        }

            .logo:hover {
                transform: scale(1.05);
            }

            .logo img {
                width: 100%;
                height: 100%;
                object-fit: contain;
                padding: 5px;
            }

            .logo i {
                font-size: clamp(1.8rem, 5vw, 2.5rem);
                color: var(--pri-green);
            }

        .header-info {
            flex: 1 1 auto;
            min-width: 0;
        }

            .header-info h1 {
                font-size: clamp(1rem, 2.5vw, 1.5rem);
                font-weight: 800;
                margin-bottom: 0.2rem;
            }

            .header-info p {
                font-size: clamp(0.7rem, 1.8vw, 0.9rem);
                opacity: 0.9;
            }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: clamp(1rem, 3vw, 2rem);
        }

        .welcome-section {
            text-align: center;
            margin-bottom: clamp(1rem, 3vw, 2rem);
            padding: clamp(1rem, 4vw, 2rem) clamp(0.8rem, 3vw, 1.5rem);
            background: var(--pri-white);
            border-radius: 15px;
            box-shadow: 0 4px 20px var(--shadow);
            border-left: 4px solid var(--pri-green);
        }

        .welcome-title {
            font-size: clamp(1.5rem, 5vw, 2.5rem);
            font-weight: 900;
            color: var(--pri-green);
            margin-bottom: 0.5rem;
        }

        .welcome-subtitle {
            font-size: clamp(0.85rem, 2.5vw, 1.1rem);
            color: var(--text-gray);
        }

        .form-container {
            background: var(--pri-white);
            border-radius: 20px;
            padding: clamp(1.5rem, 4vw, 3rem);
            box-shadow: 0 8px 30px var(--shadow);
            border: 1px solid rgba(22, 163, 74, 0.1);
        }

        .form-section {
            margin-bottom: 35px;
        }

        .section-title {
            color: var(--pri-green);
            font-size: 20px;
            font-weight: 700;
            margin-bottom: 20px;
            border-bottom: 2px solid rgba(22, 163, 74, 0.2);
            padding-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                color: var(--pri-green);
                font-weight: 600;
                font-size: 15px;
            }

        .required {
            color: #dc2626;
        }

        .form-control {
            width: 100%;
            padding: 14px 16px;
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            font-size: 16px;
            transition: all 0.3s ease;
            font-family: inherit;
        }

            .form-control:focus {
                border-color: var(--pri-green);
                outline: none;
                box-shadow: 0 0 0 4px rgba(22, 163, 74, 0.15);
                background: rgba(22, 163, 74, 0.02);
            }

            .form-control:hover {
                border-color: var(--pri-green);
            }

        .file-upload-area {
            border: 3px dashed #e5e7eb;
            border-radius: 15px;
            padding: 35px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            background: rgba(22, 163, 74, 0.02);
        }

            .file-upload-area:hover {
                border-color: var(--pri-green);
                background: rgba(22, 163, 74, 0.05);
            }

            .file-upload-area.dragover {
                border-color: var(--pri-green);
                background: rgba(22, 163, 74, 0.1);
            }

        .map-container {
            width: 100%;
            height: 400px;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 15px var(--shadow);
            border: 2px solid rgba(22, 163, 74, 0.2);
            position: relative;
        }

        .leaflet-container {
            height: 100%;
            width: 100%;
            border-radius: 13px;
        }

        .map-loading {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1000;
            background: rgba(255, 255, 255, 0.95);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            text-align: center;
        }

        .spinner {
            width: 40px;
            height: 40px;
            border: 4px solid #e5e7eb;
            border-top: 4px solid var(--pri-green);
            border-radius: 50%;
            margin: 0 auto 10px;
        }

        .get-location-btn {
            background: linear-gradient(135deg, var(--pri-green), var(--pri-green-light));
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
            box-shadow: 0 4px 15px var(--shadow);
        }

            .get-location-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px var(--shadow);
            }

            .get-location-btn:disabled {
                opacity: 0.6;
                cursor: not-allowed;
                transform: none;
            }

        .location-status {
            margin-top: 10px;
            padding: 12px;
            border-radius: 10px;
            font-size: 14px;
            display: none;
        }

            .location-status.success {
                background: rgba(22, 163, 74, 0.1);
                color: var(--pri-green-dark);
                border: 1px solid var(--pri-green);
            }

            .location-status.error {
                background: rgba(220, 38, 38, 0.1);
                color: #dc2626;
                border: 1px solid #dc2626;
            }

        .selected-location {
            margin-top: 10px;
            font-size: 13px;
            color: var(--pri-green-dark);
            font-weight: 600;
            display: none;
        }

        .submit-btn {
            background: linear-gradient(135deg, var(--pri-green), var(--pri-green-dark));
            color: white;
            border: none;
            padding: 18px 35px;
            border-radius: 15px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 25px;
            box-shadow: 0 8px 25px var(--shadow);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

            .submit-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 40px var(--shadow);
            }

            .submit-btn:disabled {
                opacity: 0.6;
                cursor: not-allowed;
                transform: none;
            }

        .error-message {
            color: #dc2626;
            font-size: 14px;
            margin-top: 8px;
            display: none;
            font-weight: 500;
        }

        .success-modal {
            display: none;
            position: fixed;
            z-index: 2001;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(8px);
        }

        .success-content {
            background: white;
            margin: 150px auto;
            padding: 50px;
            border-radius: 25px;
            width: 90%;
            max-width: 500px;
            text-align: center;
            box-shadow: 0 25px 60px rgba(0, 0, 0, 0.3);
        }

        .success-icon {
            width: 90px;
            height: 90px;
            background: linear-gradient(135deg, var(--pri-green), var(--pri-green-light));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
            color: white;
            font-size: 45px;
            box-shadow: 0 10px 30px var(--shadow);
        }

        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 16px 24px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
            z-index: 10000;
            max-width: 350px;
            opacity: 0;
            transform: translateX(100%);
            transition: all 0.3s ease;
            font-weight: 600;
            font-size: 14px;
        }

            .notification.success {
                background: var(--pri-green);
                color: white;
            }

            .notification.error {
                background: #dc2626;
                color: white;
            }

            .notification.show {
                opacity: 1;
                transform: translateX(0);
            }

        .file-preview {
            margin-top: 15px;
            display: none;
        }

        .file-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px;
            background: rgba(22, 163, 74, 0.1);
            border-radius: 10px;
            border: 1px solid rgba(22, 163, 74, 0.3);
            margin-bottom: 10px;
        }

            .file-item img {
                width: 60px;
                height: 60px;
                object-fit: cover;
                border-radius: 8px;
                cursor: pointer;
            }

        .file-info {
            flex: 1;
        }

        .file-name {
            font-weight: 600;
            color: var(--pri-green-dark);
            font-size: 14px;
        }

        .file-size {
            font-size: 12px;
            color: var(--text-gray);
        }

        .remove-file-btn {
            background: #dc2626;
            color: white;
            border: none;
            padding: 6px 12px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 12px;
            transition: all 0.3s ease;
        }

            .remove-file-btn:hover {
                background: #b91c1c;
            }

        small.help-text {
            color: var(--text-gray);
            font-size: 12px;
            display: block;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="header-content">
            <div class="logo-section">
                <div class="logo">
                    <img src="/imagenes/M.png" alt="Monclova" onerror="this.parentElement.innerHTML='<i class=\'fas fa-building\'></i>'">
                </div>
                <div class="logo">
                    <img src="/imagenes/ServiciosPrimarios.png" alt="Servicios Primarios" onerror="this.parentElement.innerHTML='<i class=\'fas fa-tools\'></i>'">
                </div>
                <div class="header-info">
                    <h1>Generador de Reportes</h1>
                    <p>Sistema de Reportes - Atención Ciudadana Monclova</p>
                </div>
            </div>
            <button class="back-btn" onclick="goBack()">
                <i class="fas fa-arrow-left"></i>
                Regresar
            </button>
        </div>
    </header>

    <div class="container">
        <div class="welcome-section">
            <h1 class="welcome-title">Crear Nuevo Reporte</h1>
            <p class="welcome-subtitle">
                Complete el formulario con todos los datos del problema a reportar
            </p>
        </div>

        <div class="form-container">
            <form id="reportForm">
                <!-- Información Personal -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-user"></i> Información Personal
                    </h3>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="reporterName">Nombre Completo <span class="required">*</span></label>
                            <input type="text" id="reporterName" class="form-control" placeholder="Ej: Juan Pérez García" required>
                            <div class="error-message" id="reporterNameError"></div>
                        </div>
                        <div class="form-group">
                            <label for="reporterPhone">Teléfono <span class="required">*</span></label>
                            <input type="tel" id="reporterPhone" class="form-control" placeholder="Ej: 844-123-4567" required>
                            <div class="error-message" id="reporterPhoneError"></div>
                        </div>
                    </div>
                </div>

                <!-- Ubicación -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-map-marker-alt"></i> Ubicación del Problema
                    </h3>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="street">Calle <span class="required">*</span></label>
                            <input type="text" id="street" class="form-control" placeholder="Ej: Av. Juárez" required>
                            <div class="error-message" id="streetError"></div>
                        </div>
                        <div class="form-group">
                            <label for="houseNumber">Número <span class="required">*</span></label>
                            <input type="text" id="houseNumber" class="form-control" placeholder="Ej: 123" required>
                            <div class="error-message" id="houseNumberError"></div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="neighborhood">Colonia <span class="required">*</span></label>
                            <input type="text" id="neighborhood" class="form-control" placeholder="Ej: Centro" required>
                            <div class="error-message" id="neighborhoodError"></div>
                        </div>
                        <div class="form-group">
                            <label for="betweenStreets">Entre Calles</label>
                            <input type="text" id="betweenStreets" class="form-control" placeholder="Ej: Morelos y Hidalgo">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="postalCode">Código Postal</label>
                        <input type="text" id="postalCode" class="form-control" placeholder="25700" maxlength="5">
                    </div>

                    <div class="form-group">
                        <button type="button" class="get-location-btn" id="getLocationBtn">
                            <i class="fas fa-location-crosshairs"></i>
                            Usar mi Ubicación GPS
                        </button>
                        <div class="location-status" id="locationStatus"></div>
                        <small class="help-text" style="margin-top: 8px; display: block;">
                            <i class="fas fa-mobile-alt"></i>
                            Se abrirá una ventana pidiendo permiso para acceder a tu ubicación. Debes hacer clic en <strong>"Permitir"</strong>
                        </small>
                    </div>

                    <div class="form-group">
                        <label>Ubicación en el Mapa (Opcional)</label>
                        <small class="help-text">
                            <i class="fas fa-info-circle"></i>
                            Puedes hacer clic directamente en el mapa o usar el GPS de tu dispositivo
                        </small>
                        <div class="map-container">
                            <div id="reportMap"></div>
                            <div id="reportMapLoading" class="map-loading">
                                <div class="spinner"></div>
                                <p>Cargando mapa...</p>
                            </div>
                        </div>
                        <div class="selected-location" id="selectedLocation"></div>
                        <div class="error-message" id="locationError"></div>
                        <small class="help-text" style="margin-top: 8px;">
                            💡 <strong>Tip:</strong> El marcador se puede arrastrar para ajustar la ubicación exacta
                        </small>
                    </div>
                </div>

                <!-- Tipo de Servicio -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-building"></i> Tipo de Servicio
                    </h3>

                    <div class="form-group">
                        <label for="department">Departamento <span class="required">*</span></label>
                        <select id="department" class="form-control" required>
                            <option value="">Seleccione el departamento</option>
                            <option value="alumbrado">💡 Alumbrado Público</option>
                            <option value="forestacion">🌳 Forestación</option>
                            <option value="limpieza">🧹 Ola Monclova (Barrido y Limpieza)</option>
                            <option value="bacheo">🛣️ Bacheo</option>
                            <option value="recoleccion_boteo">🚛 Boteo (Recolección)</option>
                            <option value="recoleccion_contenedores">🗑️ Contenedores (Recolección)</option>
                        </select>
                        <div class="error-message" id="departmentError"></div>
                    </div>
                </div>

                <!-- Descripción -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-edit"></i> Descripción del Problema
                    </h3>

                    <div class="form-group">
                        <label for="description">Describa el problema <span class="required">*</span></label>
                        <textarea id="description" class="form-control" rows="4" placeholder="Describa detalladamente el problema que desea reportar..." required style="resize: vertical; min-height: 120px;"></textarea>
                        <div class="error-message" id="descriptionError"></div>
                        <small class="help-text">Mínimo 20 caracteres. Sea específico sobre el problema.</small>
                    </div>
                </div>

                <!-- Evidencia Fotográfica -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-camera"></i> Evidencia Fotográfica
                    </h3>

                    <div class="form-group">
                        <label for="problemPhoto">Foto del Problema (Opcional)</label>
                        <div class="file-upload-area" id="fileUploadArea">
                            <input type="file" id="problemPhoto" accept="image/*" style="display: none;" multiple>
                            <i class="fas fa-camera" style="font-size: 48px; color: var(--pri-green); margin-bottom: 15px;"></i>
                            <p style="margin: 0; color: var(--pri-green); font-weight: 500;">
                                Haga clic para tomar/seleccionar fotos (Opcional)<br>
                                <small style="color: var(--text-gray);">o arrastre las imágenes aquí (máximo 3 fotos)</small>
                            </p>
                        </div>
                        <div class="file-preview" id="filePreview"></div>
                        <div class="error-message" id="photoError"></div>
                        <small class="help-text">
                            <i class="fas fa-info-circle"></i>
                            Las fotografías ayudan a procesar más rápido el reporte
                        </small>
                    </div>
                </div>

                <!-- Información Adicional -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-info-circle"></i> Información Adicional
                    </h3>

                    <div class="form-group">
                        <label for="additionalComments">Comentarios adicionales</label>
                        <textarea id="additionalComments" class="form-control" rows="3" placeholder="Información adicional que considere relevante..."></textarea>
                    </div>
                </div>

                <button type="submit" class="submit-btn" id="submitReport">
                    <i class="fas fa-paper-plane"></i>
                    Enviar Reporte
                </button>
            </form>
        </div>
    </div>

    <!-- Modal de Éxito -->
    <div id="successModal" class="success-modal">
        <div class="success-content">
            <div class="success-icon">
                <i class="fas fa-check"></i>
            </div>
            <h3 style="color: var(--pri-green); margin-bottom: 15px;">¡Reporte Enviado Exitosamente!</h3>
            <p style="color: var(--text-gray); margin-bottom: 20px;">
                Su reporte ha sido recibido y será procesado en breve.<br>
                <strong>Número de Folio: <span id="reportNumber"></span></strong>
            </p>
            <div style="background: rgba(22, 163, 74, 0.1); padding: 15px; border-radius: 10px; margin: 20px 0;">
                <p style="margin: 0; color: var(--pri-green); font-size: 14px;">
                    <i class="fas fa-clock"></i> <strong>Tiempo estimado de respuesta:</strong><br>
                    <span id="estimatedTime">3-5 días hábiles</span>
                </p>
            </div>
            <button onclick="closeSuccessModal()" style="background: linear-gradient(135deg, var(--pri-green), var(--pri-green-dark)); color: white; border: none; padding: 12px 24px; border-radius: 8px; cursor: pointer; font-weight: 600;">
                <i class="fas fa-check"></i> Entendido
            </button>
        </div>
    </div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        const MONCLOVA_COORDS = [26.9077, -101.4203];
        let reportMap = null;
        let selectedMapLocation = null;
        let currentLocation = null;
        let uploadedFiles = [];
        let reportCounter = parseInt(localStorage.getItem('reportCounterAC') || '2000');

        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                initializeReportMap();
            }, 500);
            setupEventListeners();
        });

        function initializeReportMap() {
            try {
                hideMapLoading();
                if (reportMap) reportMap.remove();

                reportMap = L.map('reportMap', {
                    center: MONCLOVA_COORDS,
                    zoom: 14,
                    zoomControl: true,
                    scrollWheelZoom: true,
                    doubleClickZoom: true,
                    dragging: true
                });

                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '© OpenStreetMap contributors',
                    maxZoom: 19,
                    minZoom: 10
                }).addTo(reportMap);

                setTimeout(() => reportMap.invalidateSize(), 250);

                reportMap.on('click', function(e) {
                    const lat = e.latlng.lat;
                    const lng = e.latlng.lng;

                    selectedMapLocation = { lat: lat, lng: lng };
                    currentLocation = { lat: lat, lng: lng };

                    if (window.reportLocationMarker) {
                        reportMap.removeLayer(window.reportLocationMarker);
                    }

                    const customIcon = L.divIcon({
                        html: '<div style="width: 35px; height: 35px; background: linear-gradient(135deg, #dc2626, #991b1b); border-radius: 50%; border: 3px solid white; box-shadow: 0 4px 15px rgba(0,0,0,0.4); display: flex; align-items: center; justify-content: center;"><i class="fas fa-map-pin" style="color: white; font-size: 16px;"></i></div>',
                        className: '',
                        iconSize: [35, 35],
                        iconAnchor: [17.5, 17.5]
                    });

                    window.reportLocationMarker = L.marker([lat, lng], {
                        icon: customIcon,
                        draggable: true
                    }).addTo(reportMap);

                    const popupContent = `
                        <div style="text-align: center;">
                            <b style="color: #dc2626; font-size: 14px;">📍 Ubicación del Reporte</b><br>
                            <small style="color: #666;">
                                <b>Latitud:</b> ${lat.toFixed(6)}<br>
                                <b>Longitud:</b> ${lng.toFixed(6)}<br>
                                <i style="color: #16a34a;">Puedes arrastrar el marcador</i>
                            </small>
                        </div>
                    `;

                    window.reportLocationMarker.bindPopup(popupContent).openPopup();

                    window.reportLocationMarker.on('dragend', function(event) {
                        const marker = event.target;
                        const position = marker.getLatLng();
                        selectedMapLocation = { lat: position.lat, lng: position.lng };
                        currentLocation = { lat: position.lat, lng: position.lng };
                        updateSelectedLocation(position.lat, position.lng);
                        marker.setPopupContent(`
                            <div style="text-align: center;">
                                <b style="color: #dc2626; font-size: 14px;">📍 Ubicación del Reporte</b><br>
                                <small style="color: #666;">
                                    <b>Latitud:</b> ${position.lat.toFixed(6)}<br>
                                    <b>Longitud:</b> ${position.lng.toFixed(6)}<br>
                                    <i style="color: #16a34a;">Ubicación ajustada</i>
                                </small>
                            </div>
                        `);
                        showNotification('Ubicación actualizada', 'success');
                    });

                    updateSelectedLocation(lat, lng);
                    clearFieldError('location');
                    showNotification('Ubicación seleccionada en el mapa', 'success');
                });

            } catch (error) {
                console.error('Error al inicializar mapa:', error);
            }
        }

        function hideMapLoading() {
            const loading = document.getElementById('reportMapLoading');
            if (loading) loading.style.display = 'none';
        }

        function updateSelectedLocation(lat, lng) {
            const locationEl = document.getElementById('selectedLocation');
            if (locationEl) {
                locationEl.innerHTML = `
                    <i class="fas fa-check-circle" style="color: var(--pri-green);"></i>
                    <strong>Ubicación seleccionada:</strong>
                    Latitud: ${lat.toFixed(6)}, Longitud: ${lng.toFixed(6)}
                `;
                locationEl.style.display = 'block';
                locationEl.style.padding = '12px';
                locationEl.style.background = 'rgba(22, 163, 74, 0.1)';
                locationEl.style.border = '1px solid var(--pri-green)';
                locationEl.style.borderRadius = '8px';
                locationEl.style.marginTop = '10px';
            }
        }

        function setupEventListeners() {
            document.getElementById('reportForm').addEventListener('submit', handleFormSubmit);
            document.getElementById('getLocationBtn').addEventListener('click', getCurrentLocation);
            setupFileUpload();
            setupInputValidation();
        }

        function setupFileUpload() {
            const fileArea = document.getElementById('fileUploadArea');
            const fileInput = document.getElementById('problemPhoto');

            fileArea.addEventListener('click', () => fileInput.click());

            fileArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                fileArea.classList.add('dragover');
            });

            fileArea.addEventListener('dragleave', () => {
                fileArea.classList.remove('dragover');
            });

            fileArea.addEventListener('drop', (e) => {
                e.preventDefault();
                fileArea.classList.remove('dragover');
                handleFileSelection(e.dataTransfer.files);
            });

            fileInput.addEventListener('change', function() {
                handleFileSelection(this.files);
            });
        }

        function handleFileSelection(files) {
            const maxFiles = 3;
            const maxSize = 5 * 1024 * 1024;

            if (files.length > maxFiles) {
                showNotification(`Máximo ${maxFiles} archivos permitidos`, 'error');
                return;
            }

            uploadedFiles = [];
            const preview = document.getElementById('filePreview');
            preview.innerHTML = '';

            Array.from(files).forEach((file, index) => {
                if (!file.type.startsWith('image/')) {
                    showNotification('Solo se permiten archivos de imagen', 'error');
                    return;
                }

                if (file.size > maxSize) {
                    showNotification('El archivo es demasiado grande (máximo 5MB)', 'error');
                    return;
                }

                uploadedFiles.push(file);

                const reader = new FileReader();
                reader.onload = function(e) {
                    const fileDiv = document.createElement('div');
                    fileDiv.className = 'file-item';
                    fileDiv.innerHTML = `
                        <img src="${e.target.result}" alt="Preview">
                        <div class="file-info">
                            <div class="file-name">${file.name}</div>
                            <div class="file-size">${(file.size / 1024).toFixed(1)} KB</div>
                        </div>
                        <button type="button" class="remove-file-btn" onclick="removeFile(${index})">
                            <i class="fas fa-times"></i>
                        </button>
                    `;
                    preview.appendChild(fileDiv);
                };
                reader.readAsDataURL(file);
            });

            if (uploadedFiles.length > 0) {
                preview.style.display = 'block';
                clearFieldError('photo');
            }
        }

        function removeFile(index) {
            uploadedFiles.splice(index, 1);
            if (uploadedFiles.length === 0) {
                document.getElementById('filePreview').style.display = 'none';
                document.getElementById('problemPhoto').value = '';
            } else {
                handleFileSelection(uploadedFiles);
            }
        }

        function getCurrentLocation() {
            const btn = document.getElementById('getLocationBtn');
            const originalText = btn.innerHTML;

            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Obteniendo ubicación...';
            btn.disabled = true;

            if (!navigator.geolocation) {
                showNotification('Tu navegador no soporta geolocalización', 'error');
                btn.innerHTML = originalText;
                btn.disabled = false;
                return;
            }

            navigator.geolocation.getCurrentPosition(
                function(position) {
                    const latitude = position.coords.latitude;
                    const longitude = position.coords.longitude;
                    const accuracy = position.coords.accuracy;

                    currentLocation = { lat: latitude, lng: longitude };
                    selectedMapLocation = { lat: latitude, lng: longitude };

                    if (reportMap) {
                        reportMap.flyTo([latitude, longitude], 18, {
                            duration: 2,
                            easeLinearity: 0.5
                        });

                        setTimeout(function() {
                            if (window.reportLocationMarker) {
                                reportMap.removeLayer(window.reportLocationMarker);
                            }

                            window.reportLocationMarker = L.marker([latitude, longitude], {
                                draggable: true,
                                icon: L.divIcon({
                                    html: '<div style="width: 40px; height: 40px; background: #16a34a; border: 4px solid white; border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 15px rgba(0,0,0,0.4);"><i class="fas fa-location-crosshairs" style="color: white; font-size: 18px;"></i></div>',
                                    className: '',
                                    iconSize: [40, 40],
                                    iconAnchor: [20, 20]
                                })
                            }).addTo(reportMap);

                            window.reportLocationMarker.bindPopup(
                                '<div style="text-align: center; padding: 5px;"><b style="color: #16a34a;">📍 Tu Ubicación GPS</b><br>' +
                                '<small>Lat: ' + latitude.toFixed(6) + '<br>' +
                                'Lng: ' + longitude.toFixed(6) + '<br>' +
                                'Precisión: ±' + accuracy.toFixed(0) + 'm</small></div>'
                            ).openPopup();

                            window.reportLocationMarker.on('dragend', function(e) {
                                const newPos = e.target.getLatLng();
                                selectedMapLocation = { lat: newPos.lat, lng: newPos.lng };
                                currentLocation = { lat: newPos.lat, lng: newPos.lng };
                                updateSelectedLocation(newPos.lat, newPos.lng);
                                showNotification('Ubicación ajustada', 'success');
                            });

                            updateSelectedLocation(latitude, longitude);
                            reportMap.invalidateSize();
                        }, 2100);
                    }

                    updateLocationStatus('✅ GPS obtenido - Precisión: ±' + accuracy.toFixed(0) + 'm', 'success');
                    showNotification('✅ Ubicación GPS obtenida correctamente', 'success');

                    btn.innerHTML = originalText;
                    btn.disabled = false;
                },
                function(error) {
                    let mensaje = '';

                    if (error.code === 1) {
                        mensaje = '⛔ Permiso denegado. Permite el acceso a tu ubicación.';
                    } else if (error.code === 2) {
                        mensaje = '📡 No se pudo obtener la ubicación. Verifica tu GPS.';
                    } else if (error.code === 3) {
                        mensaje = '⏱️ Tiempo agotado. Intenta nuevamente.';
                    } else {
                        mensaje = '❌ Error desconocido';
                    }

                    showNotification(mensaje, 'error');
                    updateLocationStatus(mensaje, 'error');

                    btn.innerHTML = originalText;
                    btn.disabled = false;
                },
                {
                    enableHighAccuracy: true,
                    timeout: 30000,
                    maximumAge: 0
                }
            );
        }

        function updateLocationStatus(message, type) {
            const status = document.getElementById('locationStatus');
            if (status) {
                status.textContent = message;
                status.className = `location-status ${type}`;
                status.style.display = 'block';
            }
        }

        function setupInputValidation() {
            const phoneInput = document.getElementById('reporterPhone');
            phoneInput.addEventListener('input', function(e) {
                e.target.value = e.target.value.replace(/[^0-9\s\-\(\)\+]/g, '');
            });

            const nameInput = document.getElementById('reporterName');
            nameInput.addEventListener('input', function(e) {
                e.target.value = e.target.value.replace(/[^a-zA-ZáéíóúüñÁÉÍÓÚÜÑ\s]/g, '');
            });

            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('input', function() {
                    clearFieldError(this.id);
                });
            });
        }

        function handleFormSubmit(e) {
            e.preventDefault();

            if (!validateForm()) {
                return;
            }

            const submitBtn = document.getElementById('submitReport');
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Enviando...';
            submitBtn.disabled = true;

            setTimeout(() => {
                reportCounter++;
                localStorage.setItem('reportCounterAC', reportCounter.toString());

                const reportData = {
                    folio: 'AC-' + reportCounter,
                    name: document.getElementById('reporterName').value.trim(),
                    phone: document.getElementById('reporterPhone').value.trim(),
                    street: document.getElementById('street').value.trim(),
                    houseNumber: document.getElementById('houseNumber').value.trim(),
                    neighborhood: document.getElementById('neighborhood').value.trim(),
                    betweenStreets: document.getElementById('betweenStreets').value.trim(),
                    postalCode: document.getElementById('postalCode').value.trim(),
                    department: document.getElementById('department').value,
                    description: document.getElementById('description').value.trim(),
                    additionalComments: document.getElementById('additionalComments').value.trim(),
                    location: selectedMapLocation,
                    images: uploadedFiles.map(file => file.name),
                    timestamp: new Date().toISOString(),
                    status: 'pendiente',
                    estimatedTime: getEstimatedTime(document.getElementById('department').value)
                };

                console.log('Reporte generado:', reportData);
                showSuccessModal(reportData.folio, reportData.estimatedTime);

                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
                resetForm();
            }, 2000);
        }

        function validateForm() {
            clearAllErrors();
            let isValid = true;

            const requiredFields = [
                { id: 'reporterName', message: 'El nombre es requerido', minLength: 3 },
                { id: 'reporterPhone', message: 'El teléfono es requerido', minLength: 10 },
                { id: 'street', message: 'La calle es requerida' },
                { id: 'houseNumber', message: 'El número es requerido' },
                { id: 'neighborhood', message: 'La colonia es requerida' },
                { id: 'department', message: 'Seleccione el tipo de servicio' },
                { id: 'description', message: 'La descripción es requerida', minLength: 20 }
            ];

            requiredFields.forEach(field => {
                const element = document.getElementById(field.id);
                const value = element.value.trim();

                if (!value) {
                    showFieldError(field.id, field.message);
                    isValid = false;
                } else if (field.minLength && value.length < field.minLength) {
                    showFieldError(field.id, `Debe tener al menos ${field.minLength} caracteres`);
                    isValid = false;
                }
            });

            return isValid;
        }

        function getEstimatedTime(department) {
            const times = {
                'alumbrado': '24-48 horas',
                'forestacion': '5-7 días hábiles',
                'limpieza': '1-2 días hábiles',
                'bacheo': '7-10 días hábiles',
                'recoleccion_boteo': '24-48 horas',
                'recoleccion_contenedores': '24-48 horas'
            };
            return times[department] || '3-5 días hábiles';
        }

        function showFieldError(fieldId, message) {
            const errorElement = document.getElementById(fieldId + 'Error');
            if (errorElement) {
                errorElement.textContent = message;
                errorElement.style.display = 'block';
            }
        }

        function clearFieldError(fieldId) {
            const errorElement = document.getElementById(fieldId + 'Error');
            if (errorElement) {
                errorElement.style.display = 'none';
            }
        }

        function clearAllErrors() {
            const errors = document.querySelectorAll('.error-message');
            errors.forEach(error => error.style.display = 'none');
        }

        function resetForm() {
            document.getElementById('reportForm').reset();
            clearAllErrors();
            uploadedFiles = [];
            selectedMapLocation = null;
            currentLocation = null;
            document.getElementById('filePreview').style.display = 'none';
            document.getElementById('selectedLocation').textContent = '';
            updateLocationStatus('', '');

            if (window.reportLocationMarker && reportMap) {
                reportMap.removeLayer(window.reportLocationMarker);
            }
        }

        function showSuccessModal(reportNumber, estimatedTime) {
            document.getElementById('reportNumber').textContent = reportNumber;
            document.getElementById('estimatedTime').textContent = estimatedTime;
            document.getElementById('successModal').style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        function closeSuccessModal() {
            document.getElementById('successModal').style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.innerHTML = `<i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'}"></i> ${message}`;
            document.body.appendChild(notification);

            setTimeout(() => notification.classList.add('show'), 100);
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => document.body.removeChild(notification), 300);
            }, 4000);
        }

        function goBack() {
            if (confirm('¿Desea regresar? Los datos del formulario se perderán.')) {
                window.history.back();
            }
        }
    </script>

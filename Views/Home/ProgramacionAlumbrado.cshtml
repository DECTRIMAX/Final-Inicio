        function guardarReporte() {
            const formData = {
                folio: document.getElementById('folio').value || 'S/F',
                fecha: document.getElementById('fecha').value,
                supervisor: document.getElementById('supervisor').value,
                oficial: document.getElementById('oficial').value,
                turno: document.getElementById('turno').value,
                grua: document.getElementById('grua').value,
                direccion: document.getElementById('direccion').value,
                reporte: document.getElementById('reporte').value,
                comentarios: document.getElementById('comentarios').value,
                estado: document.getElementById('estado').value,
                latitud: document.getElementById('latitud').value,
                longitud: document.getElementById('longitud').value,
                fotos: [...uploadedPhotos]
            };

            if (currentEditId) {
                const index = reportes.findIndex(r => r.id === currentEditId);
                if (index !== -1) {
                    reportes[index] = {...reportes[index], ...formData};
                    showNotification('Reporte actualizado', 'success');
                }
            } else {
                reportes.unshift({id: Date.now(), ...formData});
                showNotification('Reporte creado', 'success');
            }
            cargarReportes();
            closeModal('modalReporte');
        }

        function editarReporte(id) {
            const reporte = reportes.find(r => r.id === id);
            if (!reporte) return;
            currentEditId = id;
            uploadedPhotos = [...reporte.fotos];
            document.getElementById('folio').value = reporte.folio;
            document.getElementById('fecha').value = reporte.fecha;
            document.getElementById('supervisor').value = reporte.supervisor;
            document.getElementById('oficial').value = reporte.oficial;
            document.getElementById('turno').value = reporte.turno;
            document.getElementById('grua').value = reporte.grua;
            document.getElementById('direccion').value = reporte.direccion;
            document.getElementById('reporte').value = reporte.reporte;
            document.getElementById('comentarios').value = reporte.comentarios;
            document.getElementById('estado').value = reporte.estado;
            document.getElementById('latitud').value = reporte.latitud || '';
            document.getElementById('longitud').value = reporte.longitud || '';
            const photoPreview = document.getElementById('photoPreview');
            photoPreview.innerHTML = '';
            reporte.fotos.forEach(foto => {
                const photoDiv = document.createElement('div');
                photoDiv.className = 'photo-item';
                photoDiv.innerHTML = `<img src="${foto.url}" alt="${foto.name}"><button class="photo-delete" onclick="eliminarFoto(${foto.id})">×</button>`;

        function configurarFechas() {
            const hoy = new Date().toISOString().split('T')[0];
            document.getElementById('fecha').value = hoy;
            document.getElementById('fechaDesde').value = hoy;
            document.getElementById('fechaHasta').value = hoy;
            document.getElementById('filterMes').value = new Date().toISOString().slice(0, 7);
        }

        function obtenerUbicacion() {
            if (navigator.geolocation) {
                showNotification('Obteniendo ubicación...', 'info');
                navigator.geolocation.getCurrentPosition(
                    function(position) {
                        document.getElementById('latitud').value = position.coords.latitude.toFixed(6);
                        document.getElementById('longitud').value = position.coords.longitude.toFixed(6);
                        showNotification('Ubicación obtenida correctamente', 'success');
                    },
                    function(error) {
                        showNotification('Error al obtener ubicación. Verifica los permisos.', 'error');
                        console.error('Error de geolocalización:', error);
                    }
                );
            } else {
                showNotification('Tu navegador no soporta geolocalización', 'error');
            }
        }

        function abrirMapa(latitud, longitud) {
            if (latitud && longitud) {
                const url = `https://www.google.com/maps?q=${latitud},${longitud}`;
                window.open(url, '_blank');
            } else {
                showNotification('No hay coordenadas disponibles', 'warning');
            }
        }

        function cargarReportes(filteredReportes = null) {
            const tbody = document.getElementById('reportesBody');
            const reportesToShow = filteredReportes || reportes;
            tbody.innerHTML = '';

            reportesToShow.forEach((reporte, index) => {
                const row = document.createElement('tr');
                const tieneUbicacion = reporte.latitud && reporte.longitud;
                const botonUbicacion = tieneUbicacion
                    ? `<button class="btn btn-sm btn-info" onclick="abrirMapa('${reporte.latitud}', '${reporte.longitud}')" title="Ver en Google Maps"><i class="fas fa-map-marked-alt"></i></button>`
                    : `<span style="color: #9CA3AF; font-size: 0.8rem;">Sin ubicación</span>`;

                row.innerHTML = `
                    <td>${index + 1}</td>
                    <td>${reporte.folio}</td>
                    <td>${formatearFecha(reporte.fecha)}</td>
                    <td>${reporte.supervisor}</td>
                    <td>${reporte.oficial}</td>
                    <td>${reporte.turno}</td>
                    <td>${reporte.grua}</td>
                    <td>${reporte.direccion}</td>
                    <td>${reporte.reporte}</td>
                    <td><span class="status-badge status-${reporte.estado.toLowerCase().replace(' ', '')}">${reporte.estado}</span></td>

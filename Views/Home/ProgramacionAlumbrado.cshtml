        function eliminarReporte(id) {
            if (confirm('¿Eliminar reporte?')) {
                reportes = reportes.filter(r => r.id !== id);
                cargarReportes();
                showNotification('Reporte eliminado', 'success');
            }
        }

        function verFotos(id) {
            const reporte = reportes.find(r => r.id === id);
            if (!reporte || reporte.fotos.length === 0) {
                showNotification('No hay fotos', 'info');
                return;
            }
            const fotosViewer = document.getElementById('fotosViewer');
            fotosViewer.innerHTML = '';
            reporte.fotos.forEach(foto => {
                const photoDiv = document.createElement('div');
                photoDiv.className = 'photo-item';
                photoDiv.innerHTML = `<img src="${foto.url}" alt="${foto.name}">`;
                fotosViewer.appendChild(photoDiv);
            });
            document.getElementById('modalFotos').style.display = 'block';
        }

        function aplicarFiltros() {
            const searchText = document.getElementById('searchText').value.toLowerCase();
            const filterSupervisor = document.getElementById('filterSupervisor').value;
            const filterOficial = document.getElementById('filterOficial').value;
            const filterTurno = document.getElementById('filterTurno').value;
            const filterEstado = document.getElementById('filterEstado').value;
            const fechaDesde = document.getElementById('fechaDesde').value;
            const fechaHasta = document.getElementById('fechaHasta').value;
            const filterMes = document.getElementById('filterMes').value;

            let filteredReportes = reportes.filter(reporte => {
                let cumple = true;
                if (searchText) cumple = cumple && (reporte.folio.toLowerCase().includes(searchText) || reporte.direccion.toLowerCase().includes(searchText) || reporte.reporte.toLowerCase().includes(searchText));
                if (filterSupervisor) cumple = cumple && reporte.supervisor === filterSupervisor;
                if (filterOficial) cumple = cumple && reporte.oficial === filterOficial;
                if (filterTurno) cumple = cumple && reporte.turno === filterTurno;
                if (filterEstado) cumple = cumple && reporte.estado === filterEstado;
                if (fechaDesde && fechaHasta) {
                    const fr = new Date(reporte.fecha);
                    cumple = cumple && (fr >= new Date(fechaDesde) && fr <= new Date(fechaHasta));
                }
                if (filterMes) cumple = cumple && reporte.fecha.substring(0, 7) === filterMes;
                return cumple;
            });
            cargarReportes(filteredReportes);
            showNotification(`${filteredReportes.length} reportes encontrados`, 'info');
        }

        function limpiarFiltros() {
            document.getElementById('searchText').value = '';
            document.getElementById('filterSupervisor').value = '';
            document.getElementById('filterOficial').value = '';
            document.getElementById('filterTurno').value = '';
            document.getElementById('filterEstado').value = '';
            document.getElementById('fechaDesde').value = '';
            document.getElementById('fechaHasta').value = '';
            document.getElementById('filterMes').value = '';
            cargarReportes();
            showNotification('Filtros limpiados', 'info');
        }

        function exportarDocumento() {
            const fecha = new Date().toLocaleDateString('es-MX');
            let contenido = `PROGRAMACION DE CUADRILLAS\nALUMBRADO PUBLICO\nFECHA: ${fecha}\n\n`;
            reportes.forEach((r, i) => {
                contenido += `${i + 1}. ${r.folio} - ${formatearFecha(r.fecha)}\n   ${r.supervisor} / ${r.oficial}\n   ${r.direccion}\n   ${r.reporte}\n   Estado: ${r.estado}\n`;
                if (r.latitud && r.longitud) {
                    contenido += `   Ubicación: ${r.latitud}, ${r.longitud}\n`;
                }
                contenido += '\n';
            });
            const blob = new Blob([contenido], {type: 'text/plain;charset=utf-8'});
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `Reporte_${fecha.replace(/\//g, '-')}.txt`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
            showNotification('Documento exportado', 'success');
        }

        function showNotification(message, type = 'info') {
            const existing = document.querySelector('.notification');
            if (existing) existing.remove();
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            document.body.appendChild(notification);
            setTimeout(() => notification.classList.add('show'), 100);
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => notification.parentNode && notification.parentNode.removeChild(notification), 300);
            }, 4000);
        }

        function mostrarNotificacion(message, type) {
            showNotification(message, type);
        }

        window.addEventListener('click', function(e) {
            document.querySelectorAll('.modal').forEach(modal => {
                if (e.target === modal) modal.style.display = 'none';
            });
        });

        document.getElementById('searchText').addEventListener('input', function() {
            if (this.value.length >= 3 || this.value.length === 0) aplicarFiltros();
        });

        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey && e.key === 'n') {
                e.preventDefault();
                openModal('nuevoReporte');
            }
            if (e.ctrlKey && e.key === 'e') {
                e.preventDefault();
                exportarDocumento();
            }
            if (e.key === 'Escape') {
                if (navPanelOpen) {
                    toggleNavPanel();
                } else {
                    document.querySelectorAll('.modal').forEach(modal => {
                        if (modal.style.display === 'block') modal.style.display = 'none';
                    });
                }
            }
        });
    </script>

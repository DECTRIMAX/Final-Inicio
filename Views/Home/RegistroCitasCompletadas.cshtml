        function downloadServiceReport(folio) {
            showNotification(`Descargando reporte de servicio ${folio}...`);
        }

        function printService(folio) {
            showNotification(`Imprimiendo reporte de servicio ${folio}...`);
        }

        function downloadReport() {
            showNotification('Descargando reporte detallado...');
        }

        function printServiceReport() {
            window.print();
        }

        function openDetailModal() {
            document.getElementById('detailModal').classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeDetailModal() {
            document.getElementById('detailModal').classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        function exportCSV() {
            const headers = ['Folio', 'Fecha', 'Departamento', 'Unidad', 'Económico', 'Servicio', 'Horas'];
            const csvContent = [
                headers.join(','),
                ...filteredCompleted.map(s => [
                    s.folio, s.fechaCompletado, getDeptLabel(s.departamento),
                    s.unidad, s.economico, getServiceLabel(s.servicio), s.horasTrabajo
                ].join(','))
            ].join('\n');

            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = `servicios_completados_${new Date().toISOString().split('T')[0]}.csv`;
            link.click();

            showNotification('✅ Archivo CSV exportado correctamente');
        }

        function exportPDF() {
            showNotification('Generando PDF... (función en desarrollo)');
        }

        function printHistory() {
            window.print();
            showNotification('Imprimiendo historial...');
        }

        function generateStats() {
            showNotification('Generando estadísticas detalladas...');
        }

        function showNotification(message) {
            const notification = document.createElement('div');
            notification.className = 'notification';
            notification.innerHTML = `<i class="fas fa-check-circle" style="color: var(--pri-green); margin-right: 0.5rem;"></i>${message}`;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.classList.add('show');
            }, 100);

            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => {
                    if (document.body.contains(notification)) {
                        document.body.removeChild(notification);
                    }
                }, 300);
            }, 3000);
        }

        document.addEventListener('DOMContentLoaded', function() {
            renderTable();
            showNotification('Sistema de historial cargado - 20 servicios completados');

            document.getElementById('detailModal').addEventListener('click', function(e) {
                if (e.target === this) {
                    closeDetailModal();
                }
            });
        });
    </script>

            const now = new Date();
            const firstDay = new Date(now.getFullYear(), now.getMonth(), 1).toISOString().split('T')[0];
            const lastDay = new Date(now.getFullYear(), now.getMonth() + 1, 0).toISOString().split('T')[0];

            filteredCompleted = allCompleted.filter(s => {
                if (dept && s.departamento !== dept) return false;
                if (service && s.servicio !== service) return false;
                if (dateFrom && s.fechaCompletado < dateFrom) return false;
                if (dateTo && s.fechaCompletado > dateTo) return false;
                if (economico && !s.economico.toLowerCase().includes(economico)) return false;
                if (month && (s.fechaCompletado < firstDay || s.fechaCompletado > lastDay)) return false;
                return true;

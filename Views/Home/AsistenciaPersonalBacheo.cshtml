    <script>
        let employees = [
            { id: 1, number: '3298', name: 'MANUEL DE JESUS GARCIA RIVAS', dept: 'operativo', attendance: [false, false, false, false, false, false, false] },
            { id: 2, number: '8210', name: 'LUIS MIGUEL GARCIA SIFUENTES', dept: 'operativo', attendance: [false, false, false, false, false, false, false] },
            { id: 3, number: '7691', name: 'ERASMO GARCIA SIFUENTES', dept: 'operativo', attendance: [false, false, false, false, false, false, false] },
            { id: 4, number: '3220', name: 'MAURO ARTURO CABRERA ESPARZA', dept: 'operativo', attendance: [false, false, false, false, false, false, false] },
            { id: 5, number: '4578', name: 'MANUEL DE JESUS GARCIA FLORES', dept: 'operativo', attendance: [false, false, false, false, false, false, false] },
            { id: 6, number: '5303', name: 'SALVADOR GUERRA MARTINEZ', dept: 'operativo', attendance: [false, false, false, false, false, false, false] },
            { id: 7, number: '7344', name: 'OLIVERIO TORRES HERNANDEZ', dept: 'operativo', attendance: [false, false, false, false, false, false, false] },
            { id: 8, number: '3114', name: 'JESUS DUQUE RODRIGUEZ', dept: 'operativo', attendance: [false, false, false, false, false, false, false] },
            { id: 9, number: '8844', name: 'JAIME DE LA GARZA GUERRERO', dept: 'supervisores', attendance: [false, false, false, false, false, false, false] },
            { id: 10, number: '11013', name: 'LEONARDO IBARRA LARA', dept: 'operativo', attendance: [false, false, false, false, false, false, false] },
            { id: 11, number: '11001', name: 'WILIVALDO DAVID SANCHEZ LOPEZ', dept: 'operativo', attendance: [false, false, false, false, false, false, false] },
            { id: 12, number: '11002', name: 'JOSE CRUZ FLORES SANCHEZ', dept: 'operativo', attendance: [false, false, false, false, false, false, false] },
            { id: 13, number: '11308', name: 'ERICK ALEJANDRO VILLARREAL RAMIREZ', dept: 'operativo', attendance: [false, false, false, false, false, false, false] }
        ];

        let editingId = null;
        let navPanelOpen = false;

        const deptNames = {
            'operativo': 'Operativo',
            'supervisores': 'Supervisores',
            'administrativo': 'Administrativo'
        };

        document.addEventListener('DOMContentLoaded', function() {
            const currentMonth = new Date().getMonth() + 1;
            document.getElementById('monthFilter').value = currentMonth;
            renderTable();
            showNotification('Sistema de asistencia inicializado correctamente', 'success');
        });

        function toggleNavPanel() {
            const navPanel = document.getElementById('navPanel');
            const overlay = document.getElementById('navPanelOverlay');
            const toggleBtn = document.getElementById('navToggle');

            navPanelOpen = !navPanelOpen;

            if (navPanelOpen) {
                navPanel.classList.add('open');
                overlay.classList.add('active');
                toggleBtn.classList.add('active');
                toggleBtn.innerHTML = '<i class="fas fa-times"></i>';
                document.body.style.overflow = 'hidden';
            } else {
                navPanel.classList.remove('open');
                overlay.classList.remove('active');
                toggleBtn.classList.remove('active');
                toggleBtn.innerHTML = '<i class="fas fa-th-large"></i>';
                document.body.style.overflow = '';
            }
        }

        function redirectTo(module) {
            if (navPanelOpen) toggleNavPanel();

            const urls = {
                'captura': '/Home/CapturaBacheo',
                'mapa': '/Home/MapaBacheo',
                'rastreo': '/Home/RastreoBacheo',
                'dashboard': '/Home/DashboardBacheo',
                'reportes': '/Home/ReportesBacheo',
                'material': '/Home/MaterialUtilizadoBacheo',
                'programacion': '/Home/ProgramacionBacheo',
                'repositorio': '/Home/RepositorioPlacasBacheo',
                'citas': '/Home/AgendarCitasMantenimiento',
                'oficios': '/Home/EnviarOficiosAlmacen'
            };

            if (urls[module]) {
                showNotification('Navegando a ' + module, 'info');
                setTimeout(function() {
                    window.location.href = urls[module];
                }, 800);
            }
        }

        function renderTable() {
            const tbody = document.getElementById('tableBody');
            const deptFilter = document.getElementById('deptFilter').value;
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();

            tbody.innerHTML = '';

            let filteredEmployees = employees.filter(emp => {
                const matchesDept = deptFilter === 'all' || emp.dept === deptFilter;
                const matchesSearch = emp.name.toLowerCase().includes(searchTerm) ||
                                     emp.number.includes(searchTerm);
                return matchesDept && matchesSearch;
            });

            filteredEmployees.forEach(emp => {
                const total = emp.attendance.filter(a => a).length;
                const row = `
                    <tr>
                        <td style="font-weight: 600; color: #333;">${emp.number}</td>
                        <td style="color: #333; font-weight: 600;">${emp.name}</td>
                        <td>${deptNames[emp.dept]}</td>
                        ${emp.attendance.map((attended, idx) => `
                            <td class="checkbox-cell">
                                <input type="checkbox" class="checkbox" ${attended ? 'checked' : ''}
                                    onchange="toggleAttendance(${emp.id}, ${idx})">
                            </td>
                        `).join('')}
                        <td class="total-cell">${total}</td>
                        <td class="action-buttons">
                            <button class="btn-icon btn-edit" onclick="editEmployee(${emp.id})" title="Editar">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn-icon btn-delete" onclick="deleteEmployee(${emp.id})" title="Eliminar">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
                tbody.innerHTML += row;
            });

            updateStats();
        }

        function updateStats() {
            const deptFilter = document.getElementById('deptFilter').value;
            const filteredEmployees = employees.filter(emp =>
                deptFilter === 'all' || emp.dept === deptFilter
            );

            const totalEmpleados = filteredEmployees.length;
            const totalDias = filteredEmployees.length * 7;
            const totalAsistencias = filteredEmployees.reduce((sum, emp) =>
                sum + emp.attendance.filter(a => a).length, 0
            );
            const totalFaltas = totalDias - totalAsistencias;
            const porcentaje = totalDias > 0 ? ((totalAsistencias / totalDias) * 100).toFixed(1) : 0;

            document.getElementById('totalEmpleados').textContent = totalEmpleados;
            document.getElementById('totalAsistencias').textContent = totalAsistencias;
            document.getElementById('totalFaltas').textContent = totalFaltas;
            document.getElementById('porcentajeAsistencia').textContent = porcentaje + '%';
        }

        function toggleAttendance(empId, dayIndex) {
            const emp = employees.find(e => e.id === empId);
            if (emp) {
                emp.attendance[dayIndex] = !emp.attendance[dayIndex];
                renderTable();
                showNotification('Asistencia actualizada', 'success');
            }
        }

        function openAddModal() {
            editingId = null;
            document.getElementById('modalTitle').textContent = 'Agregar Empleado';
            document.getElementById('empNumber').value = '';
            document.getElementById('empName').value = '';
            document.getElementById('empDept').value = 'operativo';
            document.getElementById('employeeModal').classList.add('show');
        }

        function editEmployee(id) {
            editingId = id;
            const emp = employees.find(e => e.id === id);
            if (emp) {
                document.getElementById('modalTitle').textContent = 'Editar Empleado';
                document.getElementById('empNumber').value = emp.number;
                document.getElementById('empName').value = emp.name;
                document.getElementById('empDept').value = emp.dept;
                document.getElementById('employeeModal').classList.add('show');
            }
        }

        function deleteEmployee(id) {
            if (confirm('¿Está seguro de eliminar este empleado?')) {
                employees = employees.filter(e => e.id !== id);
                renderTable();
                showNotification('Empleado eliminado correctamente', 'success');
            }
        }

        function closeModal() {
            document.getElementById('employeeModal').classList.remove('show');
        }

        function saveEmployee() {
            const number = document.getElementById('empNumber').value.trim();
            const name = document.getElementById('empName').value.trim().toUpperCase();
            const dept = document.getElementById('empDept').value;

            if (!number || !name) {
                showNotification('Por favor complete todos los campos', 'error');
                return;
            }

            if (editingId) {
                const emp = employees.find(e => e.id === editingId);
                if (emp) {
                    emp.number = number;
                    emp.name = name;
                    emp.dept = dept;
                    showNotification('Empleado actualizado correctamente', 'success');
                }
            } else {
                const newId = employees.length > 0 ? Math.max(...employees.map(e => e.id)) + 1 : 1;
                employees.push({
                    id: newId,
                    number: number,
                    name: name,
                    dept: dept,
                    attendance: [false, false, false, false, false, false, false]
                });
                showNotification('Empleado agregado correctamente', 'success');
            }

            renderTable();
            closeModal();
        }

        function applyFilters() {
            const year = document.getElementById('yearFilter').value;
            const month = document.getElementById('monthFilter').value;
            const week = document.getElementById('weekFilter').value;

            showNotification('Filtros aplicados: ' + getMonthName(month) + ' ' + year + ', Semana ' + week, 'info');
            renderTable();
        }

        function clearFilters() {
            document.getElementById('yearFilter').value = '2025';
            const currentMonth = new Date().getMonth() + 1;
            document.getElementById('monthFilter').value = currentMonth;
            document.getElementById('weekFilter').value = '1';
            document.getElementById('deptFilter').value = 'all';
            document.getElementById('searchInput').value = '';
            renderTable();
            showNotification('Filtros restablecidos', 'info');
        }

        function getMonthName(month) {
            const months = ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio',
                          'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'];
            return months[parseInt(month) - 1];
        }

        function searchEmployee() {
            renderTable();
        }

        function exportToExcel() {
            showNotification('Exportando a Excel...', 'info');
            setTimeout(() => {
                showNotification('Archivo Excel generado correctamente', 'success');
            }, 1500);
        }

        function showNotification(message, type) {
            const notification = document.getElementById('notification');
            const text = document.getElementById('notificationText');
            const icon = notification.querySelector('i');

            if (type === 'success') {
                icon.className = 'fas fa-check-circle';
            } else if (type === 'error') {
                icon.className = 'fas fa-exclamation-circle';
            } else {
                icon.className = 'fas fa-info-circle';
            }

            notification.className = 'notification ' + type + ' show';
            text.textContent = message;

            setTimeout(function() {
                notification.classList.remove('show');
            }, 3000);
        }

        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('modal')) {
                closeModal();
            }
        });

        console.log('Sistema de Control de Asistencia Personal - Bacheo Municipal');
        console.log('Estilo de Oficios con Panel de Navegación Lateral');
        console.log('Sistema completamente funcional');
    </script>

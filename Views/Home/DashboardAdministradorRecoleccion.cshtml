    <script>
        function toggleSection(sectionId) {
            const content = document.getElementById('content-' + sectionId);
            const toggle = document.getElementById('toggle-' + sectionId);
            const header = toggle.closest('.section-header');

            content.classList.toggle('active');
            toggle.classList.toggle('active');
            header.classList.toggle('active');
        }

        function navigateTo(url) {
            showNotification('Accediendo al módulo...', 'info');
            setTimeout(() => {
                window.location.href = url;
            }, 500);
        }

        function showNotification(message, type = 'info') {
            const existingNotifications = document.querySelectorAll('.notification');
            existingNotifications.forEach(notif => {
                if (document.body.contains(notif)) {
                    document.body.removeChild(notif);
                }
            });

            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => notification.classList.add('show'), 100);

            notification.addEventListener('click', () => {
                notification.classList.remove('show');
                setTimeout(() => {
                    if (document.body.contains(notification)) {
                        document.body.removeChild(notification);
                    }
                }, 300);
            });

            setTimeout(() => {
                if (document.body.contains(notification)) {
                    notification.classList.remove('show');
                    setTimeout(() => {
                        if (document.body.contains(notification)) {
                            document.body.removeChild(notification);
                        }
                    }, 300);
                }
            }, 2500);
        }

        function setupLogoUpload(logoId) {
            const logoElement = document.getElementById(logoId);
            if (logoElement) {
                logoElement.addEventListener('click', () => {
                    const input = document.createElement('input');
                    input.type = 'file';
                    input.accept = 'image/*';
                    input.onchange = (e) => {
                        const file = e.target.files[0];
                        if (file) {
                            const reader = new FileReader();
                            reader.onload = (event) => {
                                logoElement.innerHTML = `<img src="${event.target.result}" alt="Logo">`;
                                showNotification('Imagen actualizada', 'success');
                            };
                            reader.readAsDataURL(file);
                        }
                    };
                    input.click();
                });
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            setupLogoUpload('escudoMunicipal');
            setupLogoUpload('logoRecoleccion');
            setupLogoUpload('logoMunicipio');
            setupLogoUpload('userAvatar');

            setTimeout(() => {
                showNotification('Sistema inicializado correctamente', 'success');
            }, 500);
        });
    </script>

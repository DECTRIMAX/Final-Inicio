                        <div class="nav-card-title">Reportes Ciudadanos</div>
                        <div class="nav-card-description">Fallas reportadas</div>
                    </div>
                    <div class="nav-card" onclick="navigateTo('/Home/MaterialUtilizadoAlumbrado')">
                        <div class="nav-card-icon"><i class="fas fa-tools"></i></div>
                        <div class="nav-card-title">Material Utilizado</div>
                        <div class="nav-card-description">Inventario de lámparas</div>
                    </div>
                    <div class="nav-card" onclick="navigateTo('/Home/AsistenciaPersonalAlumbrado')">

    <script>
        // Filtrado de eventos
        const filterButtons = document.querySelectorAll('.filter-btn');
        const eventCards = document.querySelectorAll('.event-card');
        const noEvents = document.getElementById('noEvents');

        filterButtons.forEach(button => {
            button.addEventListener('click', function() {
                const category = this.getAttribute('data-category');

                // Actualizar botones activos
                filterButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');

                let hasVisibleEvents = false;

                // Filtrar eventos
                eventCards.forEach(card => {
                    const cardCategory = card.getAttribute('data-category');
                    if (category === 'all' || cardCategory === category) {
                        card.style.display = 'block';
                        hasVisibleEvents = true;
                    } else {
                        card.style.display = 'none';
                    }
                });

                // Mostrar/ocultar mensaje de no eventos
                noEvents.style.display = hasVisibleEvents ? 'none' : 'block';
            });
        });

        // Efecto de hover en cards
        eventCards.forEach(card => {
            card.addEventListener('click', function() {
                console.log('Evento seleccionado:', this.querySelector('.event-title').textContent);
            });
        });

        console.log('Eventos Municipales cargados');
        console.log('Total de eventos:', eventCards.length);
    </script>

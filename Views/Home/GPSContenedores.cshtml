        </div>

        <div class="gps-container">
            <div class="gps-header">
                <h3><i class="fas fa-satellite-dish"></i> Mapa de Contenedores en Tiempo Real</h3>
                <div class="gps-actions">
                    <button class="btn-gps" onclick="refreshGPS()">
                        <i class="fas fa-sync-alt"></i>
                        Actualizar
                    </button>
                    <button class="btn-gps" onclick="fullscreenGPS()">
                        <i class="fas fa-expand"></i>
                        Pantalla Completa
                    </button>
                </div>
            </div>
            <div class="iframe-wrapper" id="gpsWrapper">
                <div class="loading-overlay" id="loadingOverlay">
                    <div class="spinner"></div>
                    <p>Cargando ubicaciones GPS...</p>
                </div>
                <iframe id="gpsFrame"
                        src="https://gps.epcom.net/locator/index.html?t=cfee27e232fae98d84d92679dd124590647B3A6EBF575E87E74A8E84ED9CBF22E417EF21"
                        allow="geolocation"
                        loading="lazy">
                </iframe>
            </div>
        </div>

        <div class="containers-grid" id="containersGrid"></div>
    </div>

    <script>
        const containers = [
            { id: 'CONT-001', name: 'Contenedor Centro', location: 'Plaza Principal', capacity: 85, status: 'full', type: 'Mixto' },
            { id: 'CONT-002', name: 'Contenedor Norte', location: 'Col. Industrial', capacity: 45, status: 'operational', type: 'Orgánico' },
            { id: 'CONT-003', name: 'Contenedor Sur', location: 'Fracc. Praderas', capacity: 60, status: 'operational', type: 'Inorgánico' },
            { id: 'CONT-004', name: 'Contenedor Este', location: 'Zona Comercial', capacity: 92, status: 'full', type: 'Mixto' },
            { id: 'CONT-005', name: 'Contenedor Oeste', location: 'Col. Vista Hermosa', capacity: 35, status: 'operational', type: 'Reciclable' },
            { id: 'CONT-006', name: 'Contenedor Tecnológico', location: 'Instituto Tecnológico', capacity: 50, status: 'operational', type: 'Mixto' },
            { id: 'CONT-007', name: 'Contenedor Mercado', location: 'Mercado Municipal', capacity: 78, status: 'operational', type: 'Orgánico' },
            { id: 'CONT-008', name: 'Contenedor Parque', location: 'Parque Xochipilli', capacity: 42, status: 'operational', type: 'Mixto' },
            { id: 'CONT-009', name: 'Contenedor Hospital', location: 'Hospital General', capacity: 68, status: 'operational', type: 'Sanitario' },
            { id: 'CONT-010', name: 'Contenedor Universidad', location: 'Campus Universitario', capacity: 55, status: 'operational', type: 'Reciclable' },
            { id: 'CONT-011', name: 'Contenedor Deportivo', location: 'Unidad Deportiva', capacity: 38, status: 'operational', type: 'Mixto' }
        ];

        function getCapacityClass(capacity) {
            if (capacity >= 80) return 'full';
            if (capacity >= 60) return 'warning';
            return '';
        }

        function getStatusDisplay(status) {
            const statusMap = {
                'operational': { text: 'Operativo', color: 'var(--light-green)' },
                'full': { text: 'Lleno', color: 'var(--accent-yellow)' },
                'maintenance': { text: 'Mantenimiento', color: '#EF4444' }
            };
            return statusMap[status] || statusMap['operational'];
        }

        function renderContainers() {
            const grid = document.getElementById('containersGrid');
            grid.innerHTML = containers.map(container => {
                const statusInfo = getStatusDisplay(container.status);
                return `
                    <div class="container-card" onclick="selectContainer('${container.id}')">
                        <div class="container-icon">
                            <i class="fas fa-dumpster"></i>
                        </div>
                        <div class="container-number">${container.id}</div>
                        <div class="container-name">${container.name}</div>
                        <div class="container-details">
                            <div class="detail-row">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>${container.location}</span>
                            </div>
                            <div class="detail-row">
                                <i class="fas fa-signal"></i>
                                <span class="container-status ${container.status}">
                                    <span class="status-dot" style="background: ${statusInfo.color};"></span>
                                    ${statusInfo.text}
                                </span>
                            </div>
                            <div class="detail-row">
                                <i class="fas fa-recycle"></i>
                                <span>Tipo: ${container.type}</span>
                            </div>
                            <div class="detail-row" style="flex-direction: column; align-items: flex-start; gap: 0.5rem;">
                                <div style="display: flex; align-items: center; gap: 0.8rem; width: 100%;">
                                    <i class="fas fa-chart-pie"></i>
                                    <span>Capacidad: ${container.capacity}%</span>
                                </div>
                                <div class="capacity-bar">
                                    <div class="capacity-fill ${getCapacityClass(container.capacity)}"
                                         style="width: ${container.capacity}%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function pulseStatusDots() {
            const dots = document.querySelectorAll('.status-dot');
            let opacity = 1;
            let direction = -1;

            setInterval(() => {
                opacity += direction * 0.03;
                if (opacity <= 0.5 || opacity >= 1) {
                    direction *= -1;
                }
                dots.forEach(dot => {
                    dot.style.opacity = opacity;
                });
            }, 50);
        }

        function rotateSpinner() {
            const spinner = document.querySelector('.spinner');
            let rotation = 0;

            setInterval(() => {
                rotation += 5;
                if (spinner && !document.getElementById('loadingOverlay').classList.contains('hidden')) {
                    spinner.style.transform = `rotate(${rotation}deg)`;
                }
            }, 16);
        }

        function showNotification(message, type = 'info') {
            const existingNotifications = document.querySelectorAll('.notification');
            existingNotifications.forEach(notif => {
                if (document.body.contains(notif)) {
                    document.body.removeChild(notif);
                }
            });

            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => notification.classList.add('show'), 100);

            setTimeout(() => {
                if (document.body.contains(notification)) {
                    notification.classList.remove('show');
                    setTimeout(() => {
                        if (document.body.contains(notification)) {
                            document.body.removeChild(notification);
                        }
                    }, 400);
                }
            }, 3500);
        }

        function refreshGPS() {
            showNotification('Actualizando ubicaciones de contenedores...', 'info');
            const iframe = document.getElementById('gpsFrame');
            const currentSrc = iframe.src;
            iframe.src = '';
            setTimeout(() => {
                iframe.src = currentSrc;
                showNotification('Mapa GPS actualizado correctamente', 'success');
            }, 500);
        }

        function fullscreenGPS() {
            const wrapper = document.getElementById('gpsWrapper');
            if (wrapper.requestFullscreen) {
                wrapper.requestFullscreen();
            } else if (wrapper.webkitRequestFullscreen) {
                wrapper.webkitRequestFullscreen();
            } else if (wrapper.msRequestFullscreen) {
                wrapper.msRequestFullscreen();
            }
            showNotification('Modo pantalla completa activado', 'info');
        }

        function selectContainer(containerId) {
            const cards = document.querySelectorAll('.container-card');
            cards.forEach(card => card.classList.remove('selected'));
            event.currentTarget.classList.add('selected');
            showNotification(`Monitoreando: ${containerId}`, 'info');
        }

        document.getElementById('gpsFrame').addEventListener('load', function() {
            setTimeout(() => {
                const overlay = document.getElementById('loadingOverlay');
                if (overlay) {
                    overlay.classList.add('hidden');
                    showNotification('Sistema GPS cargado correctamente', 'success');
                }
            }, 1500);
        });

        document.addEventListener('DOMContentLoaded', () => {
            renderContainers();
            pulseStatusDots();
            rotateSpinner();
            setTimeout(() => {
                showNotification('Sistema de monitoreo de contenedores iniciado', 'success');
            }, 1000);
        });
    </script>
</body>

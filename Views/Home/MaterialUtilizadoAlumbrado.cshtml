                const row = [`"${material.nombre}"`, material.categoria, material.stockActual, material.consumido, material.ultimoUso, `"${material.oficial}"`, material.turno, material.costoUnitario.toFixed(2), (material.consumido * material.costoUnitario).toFixed(2), `"${estadoStock.texto}"`];

        function aplicarFiltros() {
            const searchMaterial = document.getElementById('searchMaterial').value.toLowerCase();
            const filterCategoria = document.getElementById('filterCategoria').value;
            const filterOficial = document.getElementById('filterOficial').value;
            const filterTurno = document.getElementById('filterTurno').value;
            const fechaDesde = document.getElementById('fechaDesde').value;
            const fechaHasta = document.getElementById('fechaHasta').value;
            const filterStock = document.getElementById('filterStock').value;

            let filteredData = materialesEjemplo.filter(material => {
                let cumpleFiltros = true;
                if (searchMaterial) cumpleFiltros = cumpleFiltros && material.nombre.toLowerCase().includes(searchMaterial);
                if (filterCategoria) cumpleFiltros = cumpleFiltros && material.categoria === filterCategoria;
                if (filterOficial) cumpleFiltros = cumpleFiltros && material.oficial === filterOficial;
                if (filterTurno) cumpleFiltros = cumpleFiltros && material.turno === filterTurno;
                if (fechaDesde && fechaHasta) {
                    const fechaMaterial = new Date(material.ultimoUso);
                    const desde = new Date(fechaDesde);
                    const hasta = new Date(fechaHasta);
                    cumpleFiltros = cumpleFiltros && (fechaMaterial >= desde && fechaMaterial <= hasta);
                }
                if (filterStock) {
                    switch(filterStock) {
                        case 'alto': cumpleFiltros = cumpleFiltros && material.stockActual > 50; break;
                        case 'medio': cumpleFiltros = cumpleFiltros && material.stockActual >= 11 && material.stockActual <= 50; break;
                        case 'bajo': cumpleFiltros = cumpleFiltros && material.stockActual > 0 && material.stockActual <= 10; break;
                        case 'agotado': cumpleFiltros = cumpleFiltros && material.stockActual === 0; break;
                    }
                }
                return cumpleFiltros;
            });

            cargarMateriales(filteredData);
            showNotification(`Se encontraron ${filteredData.length} materiales`, 'info');
        }


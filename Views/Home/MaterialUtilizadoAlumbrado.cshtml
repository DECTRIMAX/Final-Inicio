            --secondary: #1e7e34;
            --accent: #5cb85c;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --info: #06b6d4;
            --dark: #1f2937;
            --light: #f0f9f4;
            --border: #d4edda;

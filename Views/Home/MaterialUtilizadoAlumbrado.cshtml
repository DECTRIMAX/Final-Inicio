        function getEstadoStock(cantidad) {
            if (cantidad === 0) return {clase: 'danger', texto: 'Agotado'};
            else if (cantidad <= 10) return {clase: 'high', texto: 'Stock Bajo'};
            else if (cantidad <= 50) return {clase: 'medium', texto: 'Stock Medio'};
            else return {clase: 'low', texto: 'Stock Alto'};
        }

        function formatearFecha(fecha) {
            return new Date(fecha + 'T00:00:00').toLocaleDateString('es-MX');
        }

        function actualizarEstadisticas(data) {
            const totalMateriales = data.length;
            const materialesUtilizados = data.reduce((sum, item) => sum + item.consumido, 0);
            const stockBajo = data.filter(item => item.stockActual <= 10).length;
            const costoTotal = data.reduce((sum, item) => sum + (item.consumido * item.costoUnitario), 0);

            document.getElementById('totalMateriales').textContent = totalMateriales;
            document.getElementById('materialesUtilizados').textContent = materialesUtilizados;
            document.getElementById('stockBajo').textContent = stockBajo;
            document.getElementById('costoTotal').textContent = `${costoTotal.toLocaleString('es-MX')}`;
        }


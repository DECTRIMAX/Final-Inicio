<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel General - Director de Almacén</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --rojo-principal: #C41E3A;
            --rojo-secundario: #8B0000;
            --rojo-claro: #DC143C;
            --gris-oscuro: #2C3E50;
            --gris-medio: #95A5A6;
            --gris-claro: #ECF0F1;
            --blanco: #FFFFFF;
            --azul-acento: #3498DB;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            color: #2c3e50;
            min-height: 100vh;
        }

        .header {
            background: linear-gradient(135deg, var(--rojo-secundario) 0%, var(--rojo-principal) 100%);
            color: white;
            padding: 1.5rem 2rem;
            box-shadow: 0 2px 15px rgba(0,0,0,0.2);
        }

        .header-content {
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .logo {
            width: 60px;
            height: 60px;
            background: rgba(255,255,255,0.15);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            border: 2px solid rgba(255,255,255,0.3);
        }

        .header-info h1 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .header-info p {
            font-size: 0.9rem;
            opacity: 0.9;
        }

        .user-section {
            display: flex;
            align-items: center;
            gap: 1rem;
            background: rgba(255,255,255,0.1);
            padding: 0.5rem 1rem;
            border-radius: 50px;
            border: 1px solid rgba(255,255,255,0.2);
        }

        .user-avatar {
            width: 45px;
            height: 45px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--rojo-principal);
            font-size: 1.2rem;
        }

        .user-info {
            text-align: left;
        }

        .user-name {
            font-weight: 600;
            font-size: 0.95rem;
        }

        .user-role {
            font-size: 0.8rem;
            opacity: 0.85;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 3rem 2rem;
        }

        .page-title {
            text-align: center;
            margin-bottom: 3rem;
        }

            .page-title h2 {
                font-size: 2.5rem;
                font-weight: 700;
                color: var(--gris-oscuro);
                margin-bottom: 0.5rem;
            }

            .page-title p {
                font-size: 1.1rem;
                color: var(--gris-medio);
            }

        .main-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .main-card {
            background: white;
            border-radius: 16px;
            padding: 0;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            cursor: pointer;
            overflow: hidden;
            border: 1px solid #e0e0e0;
        }

            .main-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 35px rgba(196, 30, 58, 0.2);
            }

        .card-header {
            background: linear-gradient(135deg, var(--rojo-principal), var(--rojo-claro));
            padding: 2rem;
            text-align: center;
        }

        .card-icon {
            width: 80px;
            height: 80px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 2.5rem;
            color: var(--rojo-principal);
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: white;
            margin-bottom: 0.5rem;
        }

        .card-subtitle {
            font-size: 0.95rem;
            color: rgba(255,255,255,0.9);
        }

        .card-body {
            padding: 2rem;
        }

        .card-description {
            font-size: 1rem;
            color: #555;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .card-features {
            list-style: none;
        }

            .card-features li {
                padding: 0.75rem;
                margin-bottom: 0.5rem;
                background: #f8f9fa;
                border-radius: 8px;
                display: flex;
                align-items: center;
                gap: 0.75rem;
                font-size: 0.95rem;
                color: #333;
            }

                .card-features li i {
                    color: var(--rojo-principal);
                    font-size: 1rem;
                    width: 20px;
                    text-align: center;
                }

        .section-separator {
            margin: 4rem 0 3rem 0;
            text-align: center;
        }

            .section-separator h3 {
                font-size: 2rem;
                font-weight: 700;
                color: var(--gris-oscuro);
                margin-bottom: 0.5rem;
            }

            .section-separator p {
                font-size: 1rem;
                color: var(--gris-medio);
            }

        .departments-section {
            background: white;
            border-radius: 16px;
            padding: 2.5rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            border: 1px solid #e0e0e0;
        }

        .departments-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }

        .dept-card {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

            .dept-card:hover {
                background: linear-gradient(135deg, var(--rojo-principal), var(--rojo-claro));
                border-color: var(--rojo-secundario);
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(196, 30, 58, 0.3);
            }

        .dept-icon {
            width: 60px;
            height: 60px;
            background: var(--rojo-principal);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 1.5rem;
            color: white;
            transition: all 0.3s ease;
        }

        .dept-card:hover .dept-icon {
            background: white;
            color: var(--rojo-principal);
        }

        .dept-name {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--gris-oscuro);
            transition: color 0.3s ease;
        }

        .dept-card:hover .dept-name {
            color: white;
        }

        .footer {
            background: linear-gradient(135deg, var(--gris-oscuro) 0%, #1a252f 100%);
            color: white;
            padding: 2rem;
            text-align: center;
            margin-top: 4rem;
        }

            .footer p {
                margin: 0.5rem 0;
                font-size: 0.9rem;
                opacity: 0.9;
            }
    </style>
</head>
<body>
    <header class="header">
        <div class="header-content">
            <div class="logo-section">
                <div class="logo">
                    <i class="fas fa-building"></i>
                </div>
                <div class="header-info">
                    <h1>Panel General de Almacén</h1>
                    <p>H. Ayuntamiento de Monclova, Coahuila</p>
                </div>
            </div>
            <div class="user-section">
                <div class="user-avatar">
                    <i class="fas fa-user-tie"></i>
                </div>
                <div class="user-info">
                    <div class="user-name">Director de Almacén</div>
                    <div class="user-role">Servicios Primarios</div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="page-title">
            <h2>Centro de Control</h2>
            <p>Gestión integral de oficios, adquisiciones y recursos vehiculares</p>
        </div>

        <div class="main-grid">
            <!-- Tarjeta Almacén de Registros -->
            <div class="main-card" onclick="openModule('almacen-registros')">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-archive"></i>
                    </div>
                    <h3 class="card-title">Almacén de Registros</h3>
                    <p class="card-subtitle">Archivo de oficios completados</p>
                </div>
                <div class="card-body">
                    <p class="card-description">
                        Consulta y gestiona todos los oficios completados y archivados del sistema.
                    </p>
                    <ul class="card-features">
                        <li><i class="fas fa-folder-open"></i> Registros completados</li>
                        <li><i class="fas fa-history"></i> Historial completo</li>
                        <li><i class="fas fa-search"></i> Búsqueda avanzada</li>
                        <li><i class="fas fa-download"></i> Exportar reportes</li>
                    </ul>
                </div>
            </div>

            <!-- Tarjeta Adquisiciones -->
            <div class="main-card" onclick="openModule('adquisiciones')">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <h3 class="card-title">Adquisiciones</h3>
                    <p class="card-subtitle">Gestión de compras y pedidos</p>
                </div>
                <div class="card-body">
                    <p class="card-description">
                        Sistema para procesar y dar seguimiento a solicitudes de adquisiciones.
                    </p>
                    <ul class="card-features">
                        <li><i class="fas fa-file-contract"></i> Solicitudes activas</li>
                        <li><i class="fas fa-clipboard-check"></i> Autorización de pedidos</li>
                        <li><i class="fas fa-truck"></i> Seguimiento de entregas</li>
                        <li><i class="fas fa-chart-bar"></i> Reportes de compras</li>
                    </ul>
                </div>
            </div>

            <!-- Tarjeta Reportes de Materiales -->
            <div class="main-card" onclick="openModule('reportes-materiales')">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <h3 class="card-title">Reportes de Materiales</h3>
                    <p class="card-subtitle">Entrega a departamentos</p>
                </div>
                <div class="card-body">
                    <p class="card-description">
                        Gestiona la entrega de material solicitado a los diferentes departamentos.
                    </p>
                    <ul class="card-features">
                        <li><i class="fas fa-box-open"></i> Material por entregar</li>
                        <li><i class="fas fa-truck-loading"></i> Preparar entregas</li>
                        <li><i class="fas fa-signature"></i> Registro de recibido</li>
                        <li><i class="fas fa-file-invoice"></i> Generar acuses</li>
                    </ul>
                </div>
            </div>

            <!-- Tarjeta Repositorio de Placas - NUEVA -->
            <div class="main-card" onclick="openModule('repositorio-placas')">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-car"></i>
                    </div>
                    <h3 class="card-title">Repositorio de Placas</h3>
                    <p class="card-subtitle">Control vehicular municipal</p>
                </div>
                <div class="card-body">
                    <p class="card-description">
                        Consulta y administra el registro completo de vehículos y placas municipales.
                    </p>
                    <ul class="card-features">
                        <li><i class="fas fa-id-card"></i> Registro de placas</li>
                        <li><i class="fas fa-truck-moving"></i> Control de unidades</li>
                        <li><i class="fas fa-file-pdf"></i> Documentación vehicular</li>
                        <li><i class="fas fa-clipboard-check"></i> Estado de vehículos</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="section-separator">
            <h3>Departamentos Municipales</h3>
            <p>Direcciones que solicitan material a través del sistema</p>
        </div>

        <div class="departments-section">
            <div class="departments-grid">
                <div class="dept-card" onclick="openDepartment('alumbrado')">
                    <div class="dept-icon">
                        <i class="fas fa-lightbulb"></i>
                    </div>
                    <div class="dept-name">Alumbrado Público</div>
                </div>

                <div class="dept-card" onclick="openDepartment('bacheo')">
                    <div class="dept-icon">
                        <i class="fas fa-road"></i>
                    </div>
                    <div class="dept-name">Bacheo</div>
                </div>

                <div class="dept-card" onclick="openDepartment('recoleccion')">
                    <div class="dept-icon">
                        <i class="fas fa-truck"></i>
                    </div>
                    <div class="dept-name">Recolección de Basura</div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        <p><strong>Sistema de Gestión de Almacén y Recursos</strong></p>
        <p>H. Ayuntamiento de Monclova 2025-2027</p>
        <p>&copy; 2025 Todos los derechos reservados</p>
    </footer>

    <script>
        function openModule(module) {
            const routes = {
                'almacen-registros': '/Home/AlmacenRegistros',
                'adquisiciones': '/Home/Adquisiciones',
                'reportes-materiales': '/Home/ReportesMateriales',
                'repositorio-placas': '/Home/RepositorioPlacas'
            };

            if (routes[module]) {
                window.location.href = routes[module];
            } else {
                showNotification('Módulo: ' + module);
            }
        }

        function openDepartment(dept) {
            // Todos los departamentos van a Reportes de Materiales con parámetro
            window.location.href = '/Home/ReportesMateriales?dept=' + dept;
        }

        function showNotification(message) {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 100px;
                right: 20px;
                background: white;
                padding: 1rem 1.5rem;
                border-radius: 8px;
                box-shadow: 0 4px 20px rgba(0,0,0,0.2);
                border-left: 4px solid var(--rojo-principal);
                z-index: 10000;
            `;
            notification.innerHTML = `
                <i class="fas fa-info-circle" style="color: var(--rojo-principal); margin-right: 0.5rem;"></i>
                <span>${message}</span>
            `;
            document.body.appendChild(notification);

            setTimeout(() => {
                document.body.removeChild(notification);
            }, 3000);
        }
    </script>
</body>
</html>

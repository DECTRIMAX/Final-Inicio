                'repositorio': '/Home/RepositorioPlacasAlumbrado',
                'citas': '/Home/AgendarCitasMantenimiento'
            };

            if (urls[module]) {
                window.location.href = urls[module];
            }
        }

        function startSpinner() {
            const spinner = document.getElementById('spinner');
            if (spinner) {
                spinnerInterval = setInterval(() => {
                    spinnerRotation += 5;
                    spinner.style.transform = `rotate(${spinnerRotation}deg)`;
                }, 16);
            }
        }

        function stopSpinner() {
            if (spinnerInterval) {
                clearInterval(spinnerInterval);
            }
        }

        function pulseIndicators() {
            const indicators = document.querySelectorAll('.status-indicator, .unit-status-dot');
            let opacity = 1;
            let direction = -1;

            setInterval(() => {
                opacity += direction * 0.03;
                if (opacity <= 0.4 || opacity >= 1) {
                    direction *= -1;
                }
                indicators.forEach(ind => {
                    ind.style.opacity = opacity;
                });
            }, 50);
        }

        function showNotification(message, type = 'info') {
            const existingNotifications = document.querySelectorAll('.notification');
            existingNotifications.forEach(notif => {
                if (document.body.contains(notif)) {
                    document.body.removeChild(notif);
                }
            });

            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.classList.add('show');
            }, 100);

            setTimeout(() => {
                if (document.body.contains(notification)) {
                    notification.classList.remove('show');
                    setTimeout(() => {
                        if (document.body.contains(notification)) {
                            document.body.removeChild(notification);
                        }
                    }, 400);
                }
            }, 3500);
        }

        function refreshGPS() {
            showNotification('Actualizando ubicaciones GPS...', 'info');
            const iframe = document.getElementById('gpsFrame');
            const currentSrc = iframe.src;
            iframe.src = '';
            setTimeout(() => {
                iframe.src = currentSrc;
                showNotification('Mapa GPS actualizado correctamente', 'success');
            }, 500);
        }

        function fullscreenGPS() {
            const wrapper = document.getElementById('gpsWrapper');
            if (wrapper.requestFullscreen) {
                wrapper.requestFullscreen();
            } else if (wrapper.webkitRequestFullscreen) {
                wrapper.webkitRequestFullscreen();
            } else if (wrapper.msRequestFullscreen) {
                wrapper.msRequestFullscreen();
            }
            showNotification('Modo pantalla completa activado', 'info');
        }

        function selectUnit(unitId) {
            const cards = document.querySelectorAll('.unit-card');
            cards.forEach(card => card.classList.remove('selected'));

            event.currentTarget.classList.add('selected');

            showNotification(`Rastreando unidad: ${unitId}`, 'info');
        }

        let lastGPSState = null;

        function preserveGPSZoom() {
            const iframe = document.getElementById('gpsFrame');
            if (iframe && iframe.contentWindow) {
                try {
                    if (lastGPSState) {
                        // Lógica adicional si es necesaria
                    }
                } catch (e) {
                    console.log('GPS zoom preservation active');
                }
            }
        }

        setInterval(preserveGPSZoom, 2000);

        document.getElementById('gpsFrame').addEventListener('load', function() {
            setTimeout(() => {
                const overlay = document.getElementById('loadingOverlay');
                if (overlay) {
                    overlay.classList.add('hidden');
                    stopSpinner();
                    showNotification('Sistema GPS cargado correctamente', 'success');
                }
                preserveGPSZoom();
            }, 1500);
        });

        window.addEventListener('online', () => {
            showNotification('Conexión GPS restaurada', 'success');
        });

        window.addEventListener('offline', () => {
            showNotification('Sin conexión - Modo offline', 'warning');
        });

        document.addEventListener('DOMContentLoaded', () => {
            startSpinner();
            pulseIndicators();

            setTimeout(() => {
                showNotification('Sistema de rastreo GPS inicializado', 'success');
            }, 1000);

